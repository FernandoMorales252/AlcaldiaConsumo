@model AlcaldiaFront.WebApp.DTOs.UsuarioDTOs.UsuarioRegistroDTO

@{
    ViewData["Title"] = "Registrarse";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Recursos externos -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;900&display=swap" rel="stylesheet">

    <style>
        /* ========================================
                   VARIABLES Y RESET
                   ======================================== */
        :root {
            --color-primario: #1f618d;
            --color-primario-light: #2980b9;
            --color-primario-dark: #2c3e50;
            --color-secundario: #95a5a6;
            --color-accent: #f39c12;
            --color-success: #27ae60;
            --color-success-light: #2ecc71;
            --color-card-bg: #ffffff;
            --color-shadow: rgba(0, 0, 0, 0.15);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            font-family: 'Inter', sans-serif;
            overflow-x: hidden;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        /* ========================================
                   CONTENEDOR PRINCIPAL
                   ======================================== */
        .register-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        .register-container {
            display: grid;
            grid-template-columns: 1fr 1.2fr;
            width: 100%;
            max-width: 1200px;
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 20px 60px var(--color-shadow);
            animation: scaleIn 0.5s ease-out;
        }

        @@keyframes scaleIn {
            from

        {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }

        }

        /* ========================================
                   PANEL IZQUIERDO - INFORMACIÓN
                   ======================================== */
        .info-panel {
            background: linear-gradient(135deg, var(--color-success) 0%, var(--color-success-light) 100%);
            color: white;
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: relative;
            overflow: hidden;
        }

            /* Patrón de fondo decorativo */
            .info-panel::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
                background-size: 30px 30px;
                animation: movePattern 30s linear infinite;
            }

        @@keyframes movePattern {
            0%

        {
            transform: translate(0, 0) rotate(0deg);
        }

        100% {
            transform: translate(50px, 50px) rotate(360deg);
        }

        }

        .info-content {
            position: relative;
            z-index: 2;
            animation: fadeInLeft 0.8s ease-out;
        }

        @@keyframes fadeInLeft {
            from

        {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        .info-icon {
            width: 100px;
            height: 100px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            transform: rotate(-5deg);
            transition: var(--transition);
        }

            .info-icon:hover {
                transform: rotate(0deg) scale(1.05);
            }

            .info-icon i {
                font-size: 3rem;
                color: white;
            }

        .info-title {
            font-size: 2.5rem;
            font-weight: 900;
            margin-bottom: 20px;
            line-height: 1.2;
        }

        .info-description {
            font-size: 1.05rem;
            font-weight: 300;
            line-height: 1.7;
            opacity: 0.95;
            margin-bottom: 40px;
        }

        /* Lista de beneficios */
        .benefits-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .benefits-list li {
                display: flex;
                align-items: center;
                gap: 15px;
                margin-bottom: 20px;
                font-size: 0.95rem;
                opacity: 0.9;
            }

                .benefits-list li i {
                    width: 32px;
                    height: 32px;
                    background: rgba(255, 255, 255, 0.25);
                    border-radius: 8px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    flex-shrink: 0;
                }

        .info-footer {
            position: relative;
            z-index: 2;
            font-size: 0.85rem;
            opacity: 0.8;
            text-align: center;
            margin-top: 30px;
        }

        /* ========================================
                   PANEL DERECHO - FORMULARIO
                   ======================================== */
        .form-panel {
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            overflow-y: auto;
            max-height: 90vh;
        }

            /* Scrollbar personalizado */
            .form-panel::-webkit-scrollbar {
                width: 8px;
            }

            .form-panel::-webkit-scrollbar-track {
                background: #f1f1f1;
                border-radius: 10px;
            }

            .form-panel::-webkit-scrollbar-thumb {
                background: var(--color-secundario);
                border-radius: 10px;
            }

                .form-panel::-webkit-scrollbar-thumb:hover {
                    background: var(--color-primario-dark);
                }

        .form-content {
            width: 100%;
            max-width: 480px;
            margin: 0 auto;
            animation: fadeInRight 0.8s ease-out;
        }

        @@keyframes fadeInRight {
            from

        {
            opacity: 0;
            transform: translateX(30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        /* Encabezado del formulario */
        .form-header {
            margin-bottom: 35px;
        }

        .form-badge {
            display: inline-block;
            padding: 8px 16px;
            background: linear-gradient(135deg, var(--color-accent), #e67e22);
            color: white;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 15px;
        }

        .form-title {
            font-size: 2.2rem;
            font-weight: 800;
            color: var(--color-primario-dark);
            margin-bottom: 10px;
            line-height: 1.2;
        }

        .form-subtitle {
            font-size: 1rem;
            color: var(--color-secundario);
            font-weight: 400;
        }

            .form-subtitle a {
                color: var(--color-success);
                text-decoration: none;
                font-weight: 600;
                transition: var(--transition);
            }

                .form-subtitle a:hover {
                    color: var(--color-success-light);
                }

        /* ========================================
                   CAMPOS DEL FORMULARIO
                   ======================================== */
        .input-group-custom {
            margin-bottom: 22px;
        }

            .input-group-custom label {
                display: block;
                font-weight: 600;
                color: var(--color-primario-dark);
                margin-bottom: 8px;
                font-size: 0.9rem;
                letter-spacing: 0.3px;
            }

        .input-wrapper {
            position: relative;
        }

            .input-wrapper i {
                position: absolute;
                left: 18px;
                top: 50%;
                transform: translateY(-50%);
                color: var(--color-secundario);
                font-size: 1rem;
                transition: var(--transition);
            }

        .form-control-custom {
            width: 100%;
            padding: 14px 18px 14px 50px;
            border: 2px solid #e8ecef;
            border-radius: 12px;
            font-size: 0.95rem;
            transition: var(--transition);
            background: #f8f9fa;
            font-family: 'Inter', sans-serif;
        }

            .form-control-custom:focus {
                outline: none;
                border-color: var(--color-success);
                background: white;
                box-shadow: 0 0 0 4px rgba(39, 174, 96, 0.1);
            }

                .form-control-custom:focus + i {
                    color: var(--color-success);
                }

        .text-danger {
            display: block;
            margin-top: 6px;
            font-size: 0.82rem;
            color: #e74c3c;
            font-weight: 500;
        }

        /* ========================================
                   ALERTAS
                   ======================================== */
        .alert-custom {
            padding: 14px 18px;
            border-radius: 12px;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            background: #fff3cd;
            border-left: 4px solid #ffc107;
            color: #856404;
            font-size: 0.9rem;
        }

            .alert-custom i {
                font-size: 1.2rem;
            }

        /* ========================================
                   BOTONES
                   ======================================== */
        .btn-custom {
            width: 100%;
            padding: 15px 24px;
            border: none;
            border-radius: 12px;
            font-size: 1.05rem;
            font-weight: 700;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            text-decoration: none;
            margin-bottom: 12px;
            font-family: 'Inter', sans-serif;
        }

        .btn-success-custom {
            background: linear-gradient(135deg, var(--color-success), var(--color-success-light));
            color: white;
            box-shadow: 0 4px 14px rgba(39, 174, 96, 0.3);
        }

            .btn-success-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(39, 174, 96, 0.4);
            }

            .btn-success-custom:active {
                transform: scale(0.98);
            }

        .btn-secondary-custom {
            background: white;
            color: var(--color-secundario);
            border: 2px solid #e0e0e0;
        }

            .btn-secondary-custom:hover {
                background: #f5f5f5;
                border-color: var(--color-secundario);
                color: var(--color-primario-dark);
            }

        /* Separador "o" */
        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 20px 0;
            color: var(--color-secundario);
            font-size: 0.85rem;
            font-weight: 500;
        }

            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                border-bottom: 1px solid #e0e0e0;
            }

            .divider span {
                padding: 0 15px;
            }

        /* ========================================
                   RESPONSIVE - TABLET Y MOBILE
                   ======================================== */
        @@media (max-width: 992px) {
            .register-container

        {
            grid-template-columns: 1fr;
            max-width: 600px;
        }

        .info-panel {
            padding: 40px 30px;
            min-height: auto;
        }

        .info-icon {
            width: 80px;
            height: 80px;
            margin-bottom: 20px;
        }

            .info-icon i {
                font-size: 2.5rem;
            }

        .info-title {
            font-size: 2rem;
            margin-bottom: 15px;
        }

        .info-description {
            font-size: 0.95rem;
            margin-bottom: 25px;
        }

        .benefits-list li {
            font-size: 0.9rem;
            margin-bottom: 15px;
        }

        .form-panel {
            padding: 40px 30px;
            max-height: none;
        }

        .form-title {
            font-size: 1.8rem;
        }

        }

        @@media (max-width: 576px) {
            .register-wrapper

        {
            padding: 20px 15px;
        }

        .register-container {
            border-radius: 16px;
        }

        .info-panel {
            padding: 30px 25px;
        }

        .info-icon {
            width: 70px;
            height: 70px;
        }

            .info-icon i {
                font-size: 2rem;
            }

        .info-title {
            font-size: 1.7rem;
        }

        .info-description {
            font-size: 0.9rem;
        }

        .benefits-list {
            display: none;
        }

        .form-panel {
            padding: 30px 20px;
        }

        .form-title {
            font-size: 1.6rem;
        }

        .form-control-custom {
            padding: 13px 16px 13px 45px;
            font-size: 0.9rem;
        }

        .btn-custom {
            padding: 13px 20px;
            font-size: 1rem;
        }

        }

        /* ========================================
                   ESTADO DE CARGA
                   ======================================== */
        .btn-custom:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .btn-custom.loading {
            position: relative;
            color: transparent;
        }

            .btn-custom.loading::after {
                content: '';
                position: absolute;
                width: 20px;
                height: 20px;
                top: 50%;
                left: 50%;
                margin-left: -10px;
                margin-top: -10px;
                border: 3px solid rgba(255,255,255,0.3);
                border-top-color: white;
                border-radius: 50%;
                animation: spin 0.8s linear infinite;
            }

        @@keyframes spin {
            to

        {
            transform: rotate(360deg);
        }

        }
    </style>
</head>
<body>
    <div class="register-wrapper">
        <div class="register-container">
            <!-- Panel Izquierdo - Información -->
            <div class="info-panel">
                <div class="info-content">
                    <div class="info-icon">
                        <i class="fas fa-user-plus"></i>
                    </div>

                    <h1 class="info-title">Únete a Nuestra Plataforma</h1>

                    <p class="info-description">
                        Crea tu cuenta y accede a las herramientas de gestión municipal más avanzadas.
                        Optimiza procesos, colabora con tu equipo y mejora la administración de tu ciudad.
                    </p>

                    <ul class="benefits-list">
                        <li>
                            <i class="fas fa-check"></i>
                            <span>Acceso completo a todas las funcionalidades</span>
                        </li>
                        <li>
                            <i class="fas fa-check"></i>
                            <span>Reportes y análisis en tiempo real</span>
                        </li>
                        <li>
                            <i class="fas fa-check"></i>
                            <span>Colaboración con otros departamentos</span>
                        </li>
                        <li>
                            <i class="fas fa-check"></i>
                            <span>Soporte técnico dedicado</span>
                        </li>
                    </ul>
                </div>

                <div class="info-footer">
                    &copy; @DateTime.Now.Year ALCALDÍA ES - Todos los derechos reservados
                </div>
            </div>

            <!-- Panel Derecho - Formulario de Registro -->
            <div class="form-panel">
                <div class="form-content">
                    <!-- Encabezado -->
                    <div class="form-header">
                        <span class="form-badge">
                            <i class="fas fa-sparkles"></i> Nuevo Usuario
                        </span>
                        <h2 class="form-title">Crear Cuenta</h2>
                        <p class="form-subtitle">
                            ¿Ya tienes una cuenta? <a asp-controller="Auth" asp-action="Login">Inicia sesión aquí</a>
                        </p>
                    </div>

                    <!-- Mensaje de Error -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert-custom">
                            <i class="fas fa-exclamation-triangle"></i>
                            <span>@ViewBag.Error</span>
                        </div>
                    }

                    <!-- Formulario -->
                    <form asp-action="Registrar" method="post">
                        <!-- Nombre Completo -->
                        <div class="input-group-custom">
                            <label asp-for="Nombre">Nombre Completo</label>
                            <div class="input-wrapper">
                                <input asp-for="Nombre"
                                       type="text"
                                       class="form-control-custom"
                                       placeholder="Juan Pérez González"
                                       required
                                       autocomplete="name" />
                                <i class="fas fa-user"></i>
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Correo Electrónico -->
                        <div class="input-group-custom">
                            <label asp-for="Email">Correo Electrónico</label>
                            <div class="input-wrapper">
                                <input asp-for="Email"
                                       type="email"
                                       class="form-control-custom"
                                       placeholder="ejemplo@alcaldia.gob.sv"
                                       required
                                       autocomplete="email" />
                                <i class="fas fa-envelope"></i>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Contraseña -->
                        <div class="input-group-custom">
                            <label asp-for="Password">Contraseña</label>
                            <div class="input-wrapper">
                                <input asp-for="Password"
                                       type="password"
                                       class="form-control-custom"
                                       placeholder="Mínimo 8 caracteres"
                                       required
                                       autocomplete="new-password" />
                                <i class="fas fa-lock"></i>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Confirmar Contraseña (si aplica) -->
                        @* Descomenta si tu DTO incluye ConfirmPassword
                        <div class="input-group-custom">
                            <label asp-for="ConfirmPassword">Confirmar Contraseña</label>
                            <div class="input-wrapper">
                                <input asp-for="ConfirmPassword" 
                                       type="password" 
                                       class="form-control-custom" 
                                       placeholder="Repite tu contraseña" 
                                       required 
                                       autocomplete="new-password" />
                                <i class="fas fa-lock-check"></i>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        *@

                        <!-- Botón de Crear Cuenta -->
                        <button type="submit" class="btn-custom btn-success-custom">
                            <i class="fas fa-user-check"></i>
                            <span>Crear Cuenta</span>
                        </button>

                        <!-- Divider -->
                        <div class="divider">
                            <span>o</span>
                        </div>

                        <!-- Botón de Volver al Login -->
                        <a asp-controller="Auth" asp-action="Login" class="btn-custom btn-secondary-custom">
                            <i class="fas fa-arrow-left"></i>
                            <span>Volver al Login</span>
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

    <script>
        // Prevenir envío múltiple del formulario
        document.querySelector('form').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            if (submitBtn.classList.contains('loading')) {
                e.preventDefault();
                return false;
            }
            submitBtn.classList.add('loading');
            submitBtn.disabled = true;
        });
    </script>
</body>
</html>