@model AlcaldiaFront.WebApp.DTOs.UsuarioDTOs.UsuarioRegistroDTO

@{
    ViewData["Title"] = "Registrarse";
}

<style>
    /* --------------------------------------------------
           ESTILOS HARMONIZADOS PARA FORMULARIOS DE AUTENTICACIÓN
           (Basado en colores de _Layout.cshtml)
           -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita - Formal */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-fondo: #ecf0f1;
    }

    /* Fondo para páginas de autenticación */
    body {
        background-color: var(--color-fondo); /* Fondo claro para destacar el formulario */
        /* Si quieres una imagen de fondo (debe existir en /images): */
        /* background: url('/images/city-hall-bg.jpg') no-repeat center center fixed;
            background-size: cover; */
    }

    /* Contenedor General para Auth */
    .auth-container {
        max-width: 450px;
        width: 90%;
        background: #ffffff; /* Fondo blanco limpio */
        padding: 35px 40px;
        border-radius: 12px;
        /* Sombra sutil pero moderna, usando el color primario */
        box-shadow: 0 6px 20px rgba(52, 73, 94, 0.2);
        text-align: center;
        border-top: 5px solid var(--color-secundario); /* Borde superior de acento */
        margin: 80px auto; /* Centrar verticalmente */
    }

        .auth-container h2 {
            color: var(--color-primario); /* Título con color primario */
            font-weight: 700;
            margin-bottom: 25px;
            font-size: 28px;
        }

    label {
        color: var(--color-primario);
        font-weight: 600;
        display: block;
        text-align: left;
        margin-bottom: 5px;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 10px 15px;
        font-size: 16px;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus {
            border-color: var(--color-secundario);
            box-shadow: 0 0 0 0.25rem rgba(243, 156, 18, 0.25); /* Sombra de enfoque con color de acento */
        }

    /* Botón de Ingresar/Registrarse (Estilo Alcaldia) */
    .btn-alcaldia {
        /* Gradiente con los colores oficiales de Alcaldía (Azul/Antracita) */
        background: linear-gradient(135deg, var(--color-primario), #4a6582);
        border: none;
        border-radius: 8px;
        padding: 12px;
        font-size: 17px;
        font-weight: 600;
        color: #fff;
        transition: 0.3s ease;
        width: 100%;
        box-shadow: 0 4px 10px rgba(52, 73, 94, 0.3); /* Sombra para profundidad */
    }

        .btn-alcaldia:hover {
            background: linear-gradient(135deg, #2c3e50, var(--color-primario));
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(52, 73, 94, 0.4);
        }

    /* Enlaces de Registro/Inicio de Sesión */
    .auth-container .text-center a {
        color: var(--color-primario); /* Links internos con color primario */
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s;
    }

        .auth-container .text-center a:hover {
            color: var(--color-secundario); /* Resaltado al pasar el mouse con acento */
            text-decoration: underline;
        }

    /* Mensajes de Error */
    .alert-danger {
        border-radius: 8px;
        padding: 10px;
        font-size: 14px;
        background-color: #fcebeb;
        color: #c0392b;
        border-left: 5px solid #e74c3c;
        text-align: left;
    }
</style>

<div class="auth-container">
    <h2>Crear Cuenta en AlcaldiaSys</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="Registrar" method="post" class="mt-3">
        <div class="form-group mb-3">
            <label asp-for="Nombre">Nombre</label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre completo" required />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email">Correo Electrónico</label>
            <input asp-for="Email" class="form-control" placeholder="admin@gmail.com" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password">Contraseña</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="********" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-alcaldia w-100">Registrarse</button>

        <div class="mt-3 text-center">
            ¿Ya tienes cuenta? <a asp-controller="Auth" asp-action="Login">Iniciar sesión</a>
        </div>
    </form>
</div>
