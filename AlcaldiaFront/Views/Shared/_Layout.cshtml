<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlcaldiaFront</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AlcaldiaFront.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* --------------------------------------------------
                    PATRÓN DE COLORES FORMAL (Alcaldía)
                    -------------------------------------------------- */
        :root {
            --color-primario: #34495e; /* Azul Marino/Antracita - Formal */
            --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
            --color-fondo: #ecf0f1;
            --color-texto: #2c3e50;
            --color-link-activo: #ffffff; /* Color de texto para el enlace activo */
        }

        /* 1. Estilos Generales y Fondo */
        body {
            background-color: var(--color-fondo);
            color: var(--color-texto);
        }

        /* 2. Barra de Navegación Personalizada */
        .navbar {
            background-color: var(--color-primario) !important; /* Fondo del color primario */
            border-bottom: 5px solid var(--color-secundario) !important; /* Borde de acento */
        }

        .navbar-brand {
            color: var(--color-secundario) !important; /* Nombre de la marca con color de acento */
            font-weight: bold;
            text-transform: uppercase;
        }

        /* Enlaces de la barra de navegación */
        .navbar-nav .nav-link {
            color: var(--color-fondo) !important; /* Enlaces blancos/claros */
            padding: 10px 15px;
            transition: background-color 0.3s, color 0.3s;
            border-radius: 4px;
        }

            .navbar-nav .nav-link:hover {
                color: var(--color-secundario) !important; /* Resaltado al pasar el mouse */
            }

        /* ESTILO DINÁMICO: Enlace Activo */
        .navbar-nav .nav-item.active .nav-link {
            background-color: var(--color-secundario) !important;
            color: var(--color-primario) !important; /* Texto oscuro sobre fondo de acento */
            font-weight: bold;
        }

        /* 3. Footer */
        .footer {
            background-color: var(--color-primario);
            color: var(--color-fondo);
            border-top: 1px solid var(--color-secundario) !important;
        }

            .footer a {
                color: var(--color-secundario);
                text-decoration: none;
            }

                .footer a:hover {
                    color: #ffe082; /* Tono más claro del acento */
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-city"></i> AlcaldiaFront
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" id="main-navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" data-controller="Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy" data-controller="Home">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TipoDoc" asp-action="Index" data-controller="TipoDoc">Tipos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Municipio" asp-action="Index" data-controller="Municipio">Municipios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Documento" asp-action="Index" data-controller="Documento">Documentos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cargo" asp-action="Index" data-controller="Cargo">Cargos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Inventario" asp-action="Index" data-controller="Inventario">Inventario</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Proyecto" asp-action="Index" data-controller="Proyecto">Proyectos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Empleado" asp-action="Index" data-controller="Empleado">Empleados</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Aviso" asp-action="Index" data-controller="Aviso">Avisos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Queja" asp-action="Index" data-controller="Queja">Reportes</a>
                        </li>
                    </ul>
                </div>
                @await Component.InvokeAsync("UserInfo")

                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-flex">
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                        Cerrar Sesión ❌
                    </button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-center">
        <div class="container">
            &copy; @DateTime.Now.Year - AlcaldiaFront - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function() {
            var currentController = '@ViewContext.RouteData.Values["Controller"]';
            var currentAction = '@ViewContext.RouteData.Values["Action"]';

            // 1. Desactivar todos los enlaces y elementos
            $('#main-navbar-nav .nav-item').removeClass('active');

            // 2. Iterar sobre todos los enlaces y buscar la coincidencia
            $('#main-navbar-nav .nav-item a').each(function() {
                var linkController = $(this).data('controller');
                var linkHref = $(this).attr('href').toLowerCase();

                // Regla simple: si el controlador en el enlace coincide con el controlador actual
                if (linkController === currentController) {
                    $(this).closest('.nav-item').addClass('active');
                    return false; // Salir del bucle, ya encontramos la coincidencia
                }

                // Regla de respaldo: si el enlace es "/" o "Home/Index" y estamos en Home/Index
                if (currentController === 'Home' && currentAction === 'Index' && (linkHref === '/' || linkHref.indexOf('home/index') > -1)) {
                    $(this).closest('.nav-item').addClass('active');
                    return false;
                }

            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>