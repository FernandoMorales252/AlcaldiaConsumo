@model AlcaldiaFront.DTOs.QuejaDTOs.QuejaRespuestaDTO
@using System.Collections.Generic

@{
    ViewData["Title"] = "Detalles del Aviso";
    Dictionary<int, string> municipioNombres = ViewBag.MunicipioNombres as Dictionary<int, string>;

    // Mapeo simple de tipo a clase de Bootstrap para los badges
    string GetTypeBadgeClass(string tipo) => tipo?.ToLower() switch
    {
        "climatico" => "bg-success",
        "festivo" => "bg-primary",
        "educativo" => "bg-info text-dark",
        "otro" => "bg-secondary",
        _ => "bg-secondary"
    };

    // Mapeo simple de nivel a clase de Bootstrap para los badges (usando el color de acento)
    string GetLevelBadgeClass(string nivel) => nivel?.ToLower() switch
    {
        "alto" => "bg-danger",
        "medio" => "bg-warning text-dark",
        "bajo" => "bg-success",
        _ => "bg-light text-dark"
    };
}

<!-- Se requiere Bootstrap y Font Awesome para los iconos y el grid layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">


<style>
    /* --------------------------------------------------
           PATRÓN DE COLORES FORMAL ADAPTADO A VISTAS DE DETALLE
           -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita - Principal */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-texto-claro: #7f8c8d;
        --color-bg-light: #f4f6f9;
    }

    body {
        background-color: var(--color-bg-light);
        font-family: 'Inter', sans-serif;
    }

    /* Contenedor principal de detalles (Tarjeta de resumen) */
    .details-card {
        background-color: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        margin-top: 30px;
        margin-bottom: 30px;
    }

    .header-section {
        border-bottom: 2px solid var(--color-secundario);
        padding-bottom: 15px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        font-weight: 700;
        font-size: 2rem;
        display: flex;
        align-items: center;
    }

        h1 i {
            color: var(--color-secundario);
            margin-right: 15px;
        }

    h4 {
        color: var(--color-texto-claro);
        font-weight: 400;
        font-size: 1.1rem;
    }

    /* Estilo de la etiqueta (Título del campo) */
    .detail-label {
        color: var(--color-primario);
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.85rem;
        margin-bottom: 5px;
        display: block;
    }

    /* Estilo del valor del campo */
    .detail-value {
        font-size: 1rem;
        padding-bottom: 10px;
        border-bottom: 1px dashed #ecf0f1;
        margin-bottom: 20px; /* Espacio entre filas */
        word-wrap: break-word;
    }

    /* Contenedor de la descripción */
    .description-container {
        margin-top: 30px;
        background-color: var(--color-bg-light);
        padding: 20px;
        border-radius: 8px;
        border-left: 5px solid var(--color-primario);
    }

    .description-text {
        white-space: pre-wrap;
        font-size: 1rem;
        line-height: 1.6;
        color: var(--color-texto);
    }

    /* Botones de Acción */
    .action-bar {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #ecf0f1;
        display: flex;
        gap: 15px;
        justify-content: flex-start;
    }

    .btn-action {
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-primario);
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            border-color: #95a5a6;
            color: white;
            transform: translateY(-1px);
        }

    /* --------------------------------------------------
           ADAPTACIÓN RESPONSIVE
           -------------------------------------------------- */
    @@media (max-width: 767.98px) {
        .details-card {
            padding: 20px;
            margin-top: 0;
            border-radius: 0;
            box-shadow: none;
        }

        .header-section {
            flex-direction: column;
            align-items: flex-start;
        }

        .detail-value {
            margin-bottom: 15px;
        }
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <!-- Contenedor principal de ancho responsivo -->
        <div class="col-lg-8 col-md-10 col-12">

            <div class="details-card">

                <div class="header-section">
                    <div>
                        <h1><i class="fas fa-bullhorn"></i> Detalle del Aviso</h1>
                        <h4>Ficha Técnica del Reporte @Model.Id_queja</h4>
                    </div>
                </div>

                <!-- GRUPO DE DATOS CLAVE (Dos columnas en desktop, una en móvil) -->
                <div class="row">

                    <!-- Columna Izquierda (Datos Generales) -->
                    <div class="col-md-6">

                        <!-- 1. Título del Reporte -->
                        <div class="detail-group">
                            <span class="detail-label">Título del Reporte</span>
                            <div class="detail-value">
                                <strong>@Html.DisplayFor(model => model.Titulo)</strong>
                            </div>
                        </div>

                        <!-- 2. Fecha de Registro -->
                        <div class="detail-group">
                            <span class="detail-label">Fecha de Registro</span>
                            <div class="detail-value">
                                <i class="far fa-calendar-alt me-1"></i> @Html.DisplayFor(model => model.Fecha_Registro)
                            </div>
                        </div>
                    </div>

                    <!-- Columna Derecha (Clasificación) -->
                    <div class="col-md-6">

                        <!-- 3. Tipo de Reporte (Badge) -->
                        <div class="detail-group">
                            <span class="detail-label">Tipo de Reporte</span>
                            <div class="detail-value">
                                <span class="badge @GetTypeBadgeClass(Model.Tipo) p-2 text-uppercase">
                                    <i class="fas fa-tag me-1"></i> @Html.DisplayFor(model => model.Tipo)
                                </span>
                            </div>
                        </div>

                        <!-- 4. Nivel de Reporte (Badge) -->
                        <div class="detail-group">
                            <span class="detail-label">Nivel de Reporte / Prioridad</span>
                            <div class="detail-value">
                                <span class="badge @GetLevelBadgeClass(Model.Nivel) p-2 text-uppercase">
                                    <i class="fas fa-exclamation-triangle me-1"></i> @Html.DisplayFor(model => model.Nivel)
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- MUNICIPIO (Full Width - Abajo de las columnas) -->
                <div class="row">
                    <div class="col-12">
                        <span class="detail-label">Municipio de Asignación</span>
                        <div class="detail-value">
                            @{
                                string nombreMunicipio = "ID de Municipio no encontrado";
                                if (municipioNombres != null && municipioNombres.ContainsKey(Model.MunicipioId))
                                {
                                    nombreMunicipio = municipioNombres[Model.MunicipioId];
                                }
                            }
                            <strong class="text-info"><i class="fas fa-city me-1"></i> @nombreMunicipio</strong>
                        </div>
                    </div>
                </div>

                <!-- DESCRIPCIÓN (Full Width - Contenedor destacado) -->
                <div class="row">
                    <div class="col-12">
                        <span class="detail-label">Descripción del Reporte</span>
                        <div class="description-container">
                            <p class="description-text">
                                @Html.DisplayFor(model => model.Descripcion)
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Barra de Acciones -->
                <div class="action-bar">
                    <a asp-action="Index" class="btn btn-secondary btn-action">
                        <i class="fas fa-arrow-left me-2"></i> Volver a la Lista
                    </a>
                    @* Aquí podría ir un botón de "Editar", pero lo omito a menos que se solicite explícitamente. *@
                </div>
                <br />
                <br />

            </div>

        </div>
    </div>
</div>
