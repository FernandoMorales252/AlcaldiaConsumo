@model IEnumerable<AlcaldiaFront.DTOs.QuejaDTOs.QuejaRespuestaDTO>
@using System.Collections.Generic
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Listado de Reportes Ciudadanos";
    Dictionary<int, string> municipioNombres = ViewBag.MunicipioNombres as Dictionary<int, string>;
    int pageSize = 5; // Define cuántos elementos quieres por página
}

<style>
    /* --------------------------------------------------
         * ------------------ PATRÓN DE COLORES Y ESTILOS BASE ------------------
         * -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-fondo-claro: #ecf0f1;
        --color-texto: #2c3e50;
        --color-riesgo: #e74c3c; /* Rojo para Riesgo */
    }

    /* Contenedor principal */
    .data-card {
        background-color: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        border-left: 6px solid var(--color-secundario);
        padding-left: 18px;
        margin-bottom: 25px;
        font-size: 2rem;
        font-weight: 300;
        display: flex;
        align-items: center;
    }

        h1 i {
            color: var(--color-secundario);
            margin-right: 10px;
            font-size: 1.5rem;
        }

    /* Estilo de la tabla */
    .table-hover tbody tr:hover {
        background-color: #f7f9fb;
        transition: background-color 0.2s;
    }

    .table thead th {
        background-color: var(--color-primario);
        color: white;
        border-bottom: 4px solid var(--color-secundario);
        font-weight: 600;
        vertical-align: middle;
        text-align: center;
        padding: 12px 8px;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    .table tbody td {
        vertical-align: middle;
        font-size: 0.9rem;
        padding: 10px 8px;
        color: var(--color-texto);
    }

    /* Resaltar la fila de alto riesgo */
    .table-danger-row {
        background-color: #fcebeb !important;
        border-left: 5px solid var(--color-riesgo);
    }

        .table-danger-row:hover {
            background-color: #f8e0e0 !important;
        }

    /* Estilos de Badges (Nivel de Atención) */
    .badge {
        font-weight: 700;
        padding: 6px 12px;
        border-radius: 15px;
        min-width: 80px;
        display: inline-block;
        text-transform: uppercase;
        font-size: 0.75rem;
    }

    /* Colores personalizados para Nivel de Atención */
    .bg-success {
        background-color: #2ecc71 !important; /* Bajo */
        color: white;
    }

    .bg-primary {
        background-color: #3498db !important; /* Medio */
        color: white;
    }

    .bg-info {
        background-color: var(--color-secundario) !important; /* Alto (Dorado) */
        color: var(--color-primario);
    }

    .bg-danger {
        background-color: var(--color-riesgo) !important; /* Riesgo (Rojo) */
        color: white;
    }

    /* Estilos para los botones de la paginación */
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 25px;
    }

    .page-item.active .page-link {
        background-color: var(--color-secundario);
        border-color: var(--color-secundario);
        color: var(--color-primario);
        font-weight: bold;
    }

    .action-buttons a {
        margin: 0 3px;
        min-width: 30px;
    }

    /* --------------------------------------------------
         * ------------------ ESTILOS DE FILTRO ------------------
         * -------------------------------------------------- */
    .filter-card {
        background-color: var(--color-fondo-claro);
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 25px;
        transition: all 0.3s;
    }

        .filter-card h5 {
            color: var(--color-primario);
            font-weight: 600;
            margin-bottom: 10px;
        }

    .form-control, .form-select {
        border-radius: 6px;
        border-color: #ccc;
        box-shadow: none;
        transition: border-color 0.3s;
        font-size: 0.95rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--color-secundario);
            box-shadow: 0 0 0 0.1rem rgba(243, 156, 18, 0.5);
        }

    .btn-filter {
        background-color: var(--color-secundario);
        border-color: var(--color-secundario);
        color: var(--color-primario);
        font-weight: 600;
        min-width: 100px;
    }

        .btn-filter:hover {
            background-color: #e6b25a;
            border-color: #e6b25a;
            color: var(--color-primario);
        }

    .btn-clear {
        color: var(--color-primario);
        border-color: #bdc3c7;
    }

    /* --------------------------------------------------
         * ------------------ RESPONSIVENESS DE LA TABLA (MÓVIL) ------------------
         * -------------------------------------------------- */
    @@media screen and (max-width: 991px) {
        .table-responsive {
            overflow-x: unset;
        }
        /* Oculta columnas menos esenciales en móvil */
        #reportesTable thead th:nth-child(4), /* Tipo de reporte */
        #reportesTable tbody td:nth-child(4) {
            display: none;
        }

        #reportesTable, #reportesTable tbody, #reportesTable tr {
            display: block;
            width: 100%;
        }

            #reportesTable thead {
                display: none;
            }

            #reportesTable tr {
                margin-bottom: 15px;
                border: 1px solid #ddd;
                border-left-width: 5px;
                border-left-color: var(--color-primario);
                border-radius: 6px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
                background-color: white;
                padding: 5px 0;
            }
                /* Aplica color de riesgo al borde lateral en móvil */
                #reportesTable tr.table-danger-row {
                    border-left-color: var(--color-riesgo) !important;
                }

            #reportesTable td {
                display: block;
                text-align: right !important;
                padding-left: 55% !important;
                position: relative;
                border: none;
                border-bottom: 1px dotted var(--color-fondo-claro);
                white-space: normal;
            }

                #reportesTable td:last-child {
                    border-bottom: none;
                }

                #reportesTable td::before {
                    content: attr(data-label);
                    position: absolute;
                    left: 10px;
                    width: 50%;
                    padding-right: 10px;
                    font-weight: 700;
                    text-align: left;
                    color: var(--color-primario);
                    font-size: 0.9rem;
                }

                #reportesTable td.action-buttons {
                    text-align: center !important;
                    padding: 10px 10px;
                }

                    #reportesTable td.action-buttons::before {
                        display: none;
                    }
    }
</style>

<div class="data-card">

    <h1><i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]</h1>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <div>
        <button class="btn btn-secondary mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFilters" aria-expanded="false" aria-controls="collapseFilters">
            <i class="fas fa-filter"></i> Mostrar/Ocultar Filtros
        </button>
    </div>

    <div class="collapse" id="collapseFilters">
        <div class="filter-card">
            <form asp-action="Index" method="get">
                <h5><i class="fas fa-search"></i> Filtros de Búsqueda</h5>
                <div class="row g-3">
                    <div class="col-sm-6 col-lg-3">
                        <label for="Titulo" class="form-label visually-hidden">Titulo</label>
                        <input type="text"
                               class="form-control"
                               id="Titulo"
                               name="Titulo"
                               placeholder="Buscar por Título"
                               value="@ViewBag.CurrentTitulo">
                    </div>

                    <div class="col-sm-6 col-lg-3">
                        <label for="MunicipioId" class="form-label visually-hidden">Municipio</label>
                        <select class="form-select" id="MunicipioId" name="MunicipioId">
                            @* Opción para "Todos" *@
                            <option value="">-- Todos los Municipios --</option>
                            @foreach (var item in (List<SelectListItem>)ViewBag.MunicipioId)
                            {
                                <option value="@item.Value" selected="@(item.Value == ViewBag.CurrentMunicipioId?.ToString())">@item.Text</option>
                            }
                        </select>
                    </div>

                    <div class="col-sm-6 col-lg-3">
                        <label for="Tipo" class="form-label visually-hidden">Tipo</label>
                        <select class="form-select" id="Tipo" name="Tipo">
                            @* Opción para "Todos" *@
                            <option value="">-- Todos los Tipos --</option>
                            @foreach (var item in (List<SelectListItem>)ViewBag.TipoList)
                            {
                                <option value="@item.Value" selected="@(item.Value == ViewBag.CurrentTipo)">@item.Text</option>
                            }
                        </select>
                    </div>

                    <div class="col-sm-6 col-lg-3">
                        <label for="Nivel" class="form-label visually-hidden">Nivel</label>
                        <select class="form-select" id="Nivel" name="Nivel">
                            @* Opción para "Todos" *@
                            <option value="">-- Todos los Niveles --</option>
                            @foreach (var item in (List<SelectListItem>)ViewBag.NivelList)
                            {
                                <option value="@item.Value" selected="@(item.Value == ViewBag.CurrentNivel)">@item.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <div class="col-12 text-end text-sm-center">
                        @* Alinea a la derecha en pantallas grandes, al centro en móvil *@
                        <button type="submit" class="btn btn-filter me-2"><i class="fas fa-search"></i> Filtrar</button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-clear"><i class="fas fa-undo"></i> Limpiar Filtros</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @**@

    <div class="table-responsive">
        <table class="table table-hover" id="reportesTable">
            <thead>
                <tr>
                    <th data-label="Reporte">Reporte</th>
                    <th data-label="Motivo">Motivo</th>
                    <th class="text-center" data-label="Fecha">Fecha de registro</th>
                    <th class="text-center" data-label="Tipo">Tipo de reporte</th>
                    <th class="text-center" data-label="Prioridad">Nivel de atención</th>
                    <th data-label="Municipio">Municipio</th>
                    <th class="text-center" data-label="Acciones">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    string rowClass = item.Nivel == "riesgo" ? "table-danger-row" : "";
                    <tr class="@rowClass">
                        <td data-label="Reporte">@Html.DisplayFor(modelItem => item.Titulo)</td>
                        <td data-label="Motivo">
                            @{
                                string descripcionCorto = (!string.IsNullOrEmpty(item.Descripcion) && item.Descripcion.Length > 50) ?
                                (item.Descripcion.Substring(0, 50) + "...") :
                                item.Descripcion;
                                @descripcionCorto
                            }
                        </td>
                        <td class="text-center" data-label="Fecha">@Html.DisplayFor(modelItem => item.Fecha_Registro)</td>
                        <td class="text-center" data-label="Tipo">
                            @{
                                string tipoBadgeClass = item.Tipo switch
                                {
                                    "desechos" => "success",
                                    "contaminacion" => "primary",
                                    "seguridad" => "info",
                                    "infraestructura" => "danger",
                                    "otro" => "secondary",
                                    _ => "secondary"
                                };
                            }
                            <span class="badge bg-@tipoBadgeClass">
                                @Html.DisplayFor(modelItem => item.Tipo)
                            </span>
                        </td>
                        <td class="text-center" data-label="Prioridad">
                            @{
                                string lvlClass = item.Nivel switch
                                {
                                    "bajo" => "success",
                                    "medio" => "primary",
                                    "alto" => "info", // Usando color secundario (Dorado) para Alto
                                    "riesgo" => "danger", // Usando color de Riesgo (Rojo)
                                    _ => "secondary"
                                };
                            }
                            <span class="badge bg-@lvlClass">
                                @Html.DisplayFor(modelItem => item.Nivel)
                            </span>
                        </td>
                        <td data-label="Municipio">
                            @{
                                string nombreMunicipio = "N/A";
                                if (municipioNombres != null && municipioNombres.ContainsKey(item.MunicipioId))
                                {
                                    nombreMunicipio = municipioNombres[item.MunicipioId];
                                }
                            }
                            @nombreMunicipio
                        </td>
                        <td class="text-center action-buttons" data-label="Acciones">
                            <a asp-action="Details" asp-route-id="@item.Id_queja" class="btn btn-sm btn-outline-info" title="Detalles"><i class="fas fa-info-circle"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav class="pagination-container" aria-label="Navegación de Reportes">
        <ul class="pagination" id="pagination-ul"></ul>
    </nav>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center mt-4" role="alert">
            <h4>No hay reportes de usuarios pendientes</h4>
            <p>El listado está vacío. ¡Buen trabajo!</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicialmente, mostrar los filtros si ya hay valores seleccionados.
            const currentTitulo = '@ViewBag.CurrentTitulo';
            const currentMunicipioId = '@ViewBag.CurrentMunicipioId';
            const currentTipo = '@ViewBag.CurrentTipo';
            const currentNivel = '@ViewBag.CurrentNivel';

            const filtersExist = currentTitulo || currentMunicipioId || currentTipo || currentNivel;

            if (filtersExist) {
                $('#collapseFilters').addClass('show');
            }


            // Configuración de Paginación (con truncamiento mejorado)
            const table = document.getElementById('reportesTable');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            const pageSize = @pageSize;
            const totalPages = Math.ceil(rows.length / pageSize);
            const paginationUl = $('#pagination-ul');

            function displayPage(page) {
                const startIndex = (page - 1) * pageSize;
                const endIndex = startIndex + pageSize;

                rows.forEach((row, index) => {
                    row.style.display = (index >= startIndex && index < endIndex) ? '' : 'none';
                });

                updatePaginationControls(page);
            }

            function updatePaginationControls(currentPage) {
                paginationUl.empty();

                if (totalPages <= 1) return; // No mostrar paginación si solo hay una página

                const pagesToShow = 5;
                let startPage = Math.max(1, currentPage - Math.floor(pagesToShow / 2));
                let endPage = Math.min(totalPages, currentPage + Math.floor(pagesToShow / 2));

                if (endPage - startPage + 1 < pagesToShow) {
                    if (startPage > 1) {
                        startPage = Math.max(1, startPage - (pagesToShow - (endPage - startPage + 1)));
                    }
                    if (endPage < totalPages) {
                        endPage = Math.min(totalPages, endPage + (pagesToShow - (endPage - startPage + 1)));
                    }
                }

                // Botón Anterior
                const prevDisabled = currentPage === 1 ? 'disabled' : '';
                paginationUl.append(`
                    <li class="page-item ${prevDisabled}">
                        <a class="page-link" href="#" data-page="${currentPage - 1}"><i class="fas fa-angle-left"></i> Anterior</a>
                    </li>
                `);

                // Botones de Páginas Numeradas
                if (startPage > 1) {
                    paginationUl.append(`<li class="page-item"><a class="page-link" href="#" data-page="1">1</a></li>`);
                    if (startPage > 2) paginationUl.append(`<li class="page-item disabled"><span class="page-link">...</span></li>`);
                }

                for (let i = startPage; i <= endPage; i++) {
                    const active = i === currentPage ? 'active' : '';
                    paginationUl.append(`
                        <li class="page-item ${active}">
                            <a class="page-link" href="#" data-page="${i}">${i}</a>
                        </li>
                    `);
                }

                if (endPage < totalPages) {
                    if (endPage < totalPages - 1) paginationUl.append(`<li class="page-item disabled"><span class="page-link">...</span></li>`);
                    paginationUl.append(`<li class="page-item"><a class="page-link" href="#" data-page="${totalPages}">${totalPages}</a></li>`);
                }

                // Botón Siguiente
                const nextDisabled = currentPage === totalPages ? 'disabled' : '';
                paginationUl.append(`
                    <li class="page-item ${nextDisabled}">
                        <a class="page-link" href="#" data-page="${currentPage + 1}">Siguiente <i class="fas fa-angle-right"></i></a>
                    </li>
                `);
            }

            // Manejador de clic para los botones de paginación
            paginationUl.on('click', 'a.page-link', function (e) {
                e.preventDefault();
                const newPage = parseInt($(this).data('page'));

                if (!isNaN(newPage) && newPage >= 1 && newPage <= totalPages) {
                    displayPage(newPage);
                }
            });

            // Inicializar la tabla y la paginación en la página 1
            if (rows.length > 0) {
                displayPage(1);
            }
        });
    </script>
}