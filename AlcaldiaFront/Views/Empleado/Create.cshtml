@model AlcaldiaFront.DTOs.EmpleadoDTOs.EmpleadoCrearDTo
@{
    ViewData["Title"] = "Crear Empleado";
}

<style>
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-fondo-claro: #ecf0f1;
        --color-texto: #2c3e50;
    }

    /* Contenedor principal del formulario (Tarjeta centralizada) */
    .form-container {
        background-color: white;
        padding: 30px;
        border-radius: 12px; /* Ligeramente más redondeado */
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15); /* Sombra más profunda */
        margin-top: 20px;
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        border-left: 6px solid var(--color-secundario);
        padding-left: 15px;
        margin-bottom: 25px;
        font-weight: 700; /* Más audaz */
        display: flex;
        align-items: center;
        gap: 10px;
    }

    h4 {
        color: #7f8c8d;
        font-weight: 400;
        margin-bottom: 20px;
    }

    /* Estilo de los campos de formulario */
    .form-control, .form-select {
        border: 1px solid #bdc3c7;
        border-radius: 6px; /* Bordes redondeados */
        padding: 10px 12px;
        transition: border-color 0.3s, box-shadow 0.3s;
        width: 100%;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--color-secundario);
            box-shadow: 0 0 0 0.25rem rgba(243, 156, 18, 0.35); /* Sombra de acento */
            outline: none;
        }

    /* Estilo para las etiquetas (labels) */
    .control-label {
        font-weight: 600;
        color: var(--color-texto);
        margin-bottom: 8px;
        display: block;
    }

    /* Botones de Acción */
    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #4b6279;
            border-color: #4b6279;
        }

    .btn-secondary {
        background-color: #ecf0f1;
        border-color: #bdc3c7;
        color: var(--color-texto);
        font-weight: 600;
    }

        .btn-secondary:hover {
            background-color: #cfd6d8;
            border-color: #aeb5b7;
            color: var(--color-texto);
        }

    /* Contenedor de botones y acciones */
    .form-actions {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #dfe6e8;
    }

    /* Mensajes de validación */
    .text-danger {
        font-size: 0.8rem;
        font-style: italic;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="form-container">
    <h1><i class="fas fa-user-plus"></i> Agregar Nuevo Empleado</h1>
    <h4>Completa los datos personales y de asignación laboral.</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                <!-- Bloque 1: Datos Personales (2 Columnas) -->
                <h5 class="text-muted mb-3">Datos Personales</h5>
                <div class="row g-4 mb-5">

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label">Nombre(s)</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Juan" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Apellido" class="control-label">Apellido(s)</label>
                            <input asp-for="Apellido" class="form-control" placeholder="Ej: Pérez García" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Bloque 2: Información Laboral (2 Columnas) -->
                <h5 class="text-muted mb-3">Información Laboral</h5>
                <div class="row g-4 mb-5">

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Fecha_contratacion" class="control-label">Fecha de Contratación</label>
                            <input asp-for="Fecha_contratacion" type="date" class="form-control" />
                            <span asp-validation-for="Fecha_contratacion" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Estado" class="control-label">Estado Actual</label>
                            <select asp-for="Estado" class="form-control form-select">
                                <option value="">-- Seleccionar Estado --</option>
                                <option value="activo">Activo</option>
                                <option value="inactivo">Inactivo</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Bloque 3: Asignación (2 Columnas) -->
                <h5 class="text-muted mb-3">Asignación de Roles y Ubicación</h5>
                <div class="row g-4 mb-5">

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="CargoId" class="control-label">Cargo</label>
                            <select asp-for="CargoId" class="form-control form-select" asp-items="ViewBag.CargoId">
                                <option value="">-- Seleccionar Cargo --</option>
                            </select>
                            <span asp-validation-for="CargoId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MunicipioId" class="control-label">Municipio de Asignación</label>
                            <select asp-for="MunicipioId" class="form-control form-select" asp-items="ViewBag.MunicipioId">
                                <option value="">-- Seleccionar Municipio --</option>
                            </select>
                            <span asp-validation-for="MunicipioId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Bloque de Acciones: Alineados a la derecha -->
                <div class="form-group form-actions d-flex justify-content-end gap-3">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancelar</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Crear Empleado</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="text-decoration-none text-muted"><i class="fas fa-arrow-left"></i> Volver a la Lista de Empleados</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}