@model AlcaldiaFront.DTOs.EmpleadoDTOs.EmpleadoRespuestaDTo
@using System.Collections.Generic

@{
    ViewData["Title"] = "Detalles del Empleado";
    Dictionary<int, string> municipioNombres = ViewBag.MunicipioNombres as Dictionary<int, string>;
    Dictionary<int, string> cargoNombres = ViewBag.CargoNombres as Dictionary<int, string>;

    // Mapeo simple de estado a clase de Bootstrap para los badges
    string GetBadgeClass(string estado) => estado?.ToLower() switch
    {
        "activo" => "success",
        "de licencia" => "info",
        "inactivo" => "danger",
        _ => "secondary"
    };
}

<!-- Se requiere Bootstrap y Font Awesome para los iconos y el grid layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">

<style>
    /* --------------------------------------------------
           PATRÓN DE COLORES FORMAL ADAPTADO A VISTAS DE DETALLE
           -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-texto-claro: #7f8c8d;
        --color-bg-light: #f4f6f9;
        --color-texto: #2c3e50;
    }

    body {
        background-color: var(--color-bg-light);
        font-family: 'Inter', sans-serif;
    }

    /* Contenedor principal de detalles (Tarjeta de resumen) */
    .details-card {
        background-color: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin-top: 30px;
        margin-bottom: 30px;
        border-left: 5px solid var(--color-secundario); /* Borde de acento lateral */
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        font-weight: 700;
        margin-bottom: 5px;
        font-size: 2rem;
    }

    /* Subtítulo */
    h4 {
        color: var(--color-texto-claro);
        font-weight: 500;
        font-size: 1.2rem;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
        margin-bottom: 25px;
    }

    /* Estilo para cada fila de detalle */
    .detail-item {
        margin-bottom: 20px;
    }

    .detail-label {
        color: var(--color-secundario); /* Etiquetas en color de acento */
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.8rem;
        margin-bottom: 2px;
        display: block;
        letter-spacing: 0.5px;
    }

    .detail-value {
        font-size: 1.1rem;
        color: var(--color-texto);
        font-weight: 600;
        display: block;
        padding-bottom: 5px;
    }

        .detail-value i {
            margin-right: 8px;
            color: var(--color-primario); /* Iconos en color primario */
        }

    /* Badge para el estado */
    .badge-lg {
        padding: 0.5em 0.8em;
        font-size: 0.85em;
        font-weight: 600;
        border-radius: 6px;
    }

    /* Barra de Acciones */
    .action-bar {
        margin-top: 30px;
        padding-top: 25px;
        border-top: 1px solid #e1e4e8;
        display: flex;
        gap: 15px;
        justify-content: flex-end; /* Alinear a la derecha en escritorio */
    }

    .btn-action {
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 8px;
        min-width: 150px;
    }

    /* Botón Editar */
    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
        transition: transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #4b6279;
            border-color: #4b6279;
            transform: translateY(-1px);
        }

    /* Botón Volver */
    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-primario);
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            border-color: #95a5a6;
            color: white;
        }

    /* --------------------------------------------------
           ADAPTACIÓN RESPONSIVE
           -------------------------------------------------- */
    @@media (max-width: 767.98px) {
        .details-card {
            padding: 20px;
            margin-top: 0;
            border-radius: 0;
            box-shadow: none;
            border-left: none;
            border-top: 5px solid var(--color-secundario);
        }

        .action-bar {
            flex-direction: column; /* Apilar botones */
            align-items: center;
            justify-content: center;
        }

        .btn-action {
            width: 100%; /* Botones de ancho completo */
        }
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-10 col-12">

            <div class="details-card">

                <h1><i class="fas fa-id-card me-2"></i> Detalles del Empleado</h1>
                <h4>Información Personal y Laboral de @Model.Nombre @Model.Apellido</h4>

                <div class="row">
                    <!-- Columna 1: Información Personal y Contacto -->
                    <div class="col-md-6">
                        <div class="detail-item">
                            <span class="detail-label">Nombre Completo</span>
                            <span class="detail-value">
                                <i class="fas fa-user"></i> @Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)
                            </span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">Fecha de Contratación</span>
                            <span class="detail-value">
                                <i class="far fa-calendar-alt"></i> @Html.DisplayFor(model => model.Fecha_contratacion)
                            </span>
                        </div>

                        <!-- Estado con Badge -->
                        <div class="detail-item">
                            <span class="detail-label">Estado Actual</span>
                            <span class="detail-value">
                                @{
                                    string estadoEmpleado = Model?.Estado;
                                    string badgeClass = GetBadgeClass(estadoEmpleado);
                                }
                                <span class="badge rounded-pill bg-@badgeClass badge-lg">
                                    @estadoEmpleado
                                </span>
                            </span>
                        </div>
                    </div>

                    <!-- Columna 2: Información Laboral y Ubicación -->
                    <div class="col-md-6">
                        <div class="detail-item">
                            <span class="detail-label">Cargo Desempeñado</span>
                            <span class="detail-value">
                                @{
                                    string nombreCargo = cargoNombres != null && cargoNombres.ContainsKey(Model.CargoId)
                                    ? cargoNombres[Model.CargoId]
                                    : "N/A";
                                }
                                <i class="fas fa-briefcase"></i> <strong>@nombreCargo</strong>
                                @* <small class="text-muted">(ID: @Model.CargoId)</small> *@
                            </span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">Municipio Asignado</span>
                            <span class="detail-value">
                                @{
                                    string nombreMunicipio = municipioNombres != null && municipioNombres.ContainsKey(Model.MunicipioId)
                                    ? municipioNombres[Model.MunicipioId]
                                    : "N/A";
                                }
                                <i class="fas fa-city"></i> <strong>@nombreMunicipio</strong>
                                @* <small class="text-muted">(ID: @Model.MunicipioId)</small> *@
                            </span>
                        </div>

                        <!-- ID del Empleado (Opcional, si se quiere mostrar como dato clave) -->
                        <div class="detail-item">
                            <span class="detail-label">Identificador (ID)</span>
                            <span class="detail-value text-muted small">
                                <i class="fas fa-fingerprint"></i> @Model.Id_empleado
                            </span>
                        </div>
                    </div>
                </div>

                <!-- BARRA DE ACCIONES -->
                <div class="action-bar">
                    <a asp-action="Index" class="btn btn-secondary btn-action">
                        <i class="fas fa-arrow-left me-2"></i> Volver a la Lista
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model?.Id_empleado" class="btn btn-primary btn-action">
                        <i class="fas fa-edit me-2"></i> Editar Empleado
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model?.Id_empleado" class="btn btn-danger btn-action">
                        <i class="fas fa-trash-alt me-2"></i> Eliminar
                    </a>
                </div>
                <br />
                <br />
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @{
        // Opcional, pero se recomienda siempre para mantener la estructura de la vista Razor
    }
}