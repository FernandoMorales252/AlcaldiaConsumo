@model IEnumerable<AlcaldiaFront.DTOs.InventarioDTOs.InventarioRespuestaDTO>

@{
    ViewData["Title"] = "Listado de Inventario";
}

<h1>Inventario</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Elemento</a>
</p>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}
@if (TempData["Ok"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Ok"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre_item)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Cantidad)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.Fecha_ingreso)</th>
            <th>@Html.DisplayNameFor(model => model.MunicipioId)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre_item)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                <td>
                    <span class="badge badge-@(item.Estado == "disponible" ? "success" :
                                                         item.Estado == "agotado" ? "primary" :
                                                         item.Estado == "baja" ? "danger" : "secondary")">
                     @Html.DisplayFor(modelItem => item.Estado)
                </span>
                </td>
                <td>@Html.DisplayFor(modelItem => item.Fecha_ingreso)</td>
                <td>@Html.DisplayFor(modelItem => item.MunicipioId)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id_inventario" class="btn btn-sm btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id_inventario" class="btn btn-sm btn-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id_inventario" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
