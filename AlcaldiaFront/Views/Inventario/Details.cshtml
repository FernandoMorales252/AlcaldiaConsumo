@model AlcaldiaFront.DTOs.InventarioDTOs.InventarioRespuestaDTO
@using System.Collections.Generic

@{
    ViewData["Title"] = "Detalles del Elemento";
    Dictionary<int, string> municipioNombres = ViewBag.MunicipioNombres as Dictionary<int, string>;

    // Mapeo simple de estado a clase de Bootstrap 5 para los badges
    string GetBadgeClass(string estado) => estado?.ToLower() switch
    {
        "disponible" => "bg-success",
        "agotado" => "bg-warning text-dark",
        "baja" => "bg-danger",
        _ => "bg-secondary"
    };
}

<!-- Se requiere Bootstrap y Font Awesome para los iconos y el grid layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">


<style>
    /* --------------------------------------------------
           PATRÓN DE COLORES Y TIPOGRAFÍA
           -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita - Principal */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-texto: #2c3e50;
        --color-bg-light: #f4f6f9;
    }

    body {
        background-color: var(--color-bg-light);
        font-family: 'Inter', sans-serif;
        padding: 20px;
    }

    /* Contenedor principal de detalles (Tarjeta de resumen) */
    .details-card {
        background-color: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        margin-top: 30px;
        margin-bottom: 30px;
        border-left: 5px solid var(--color-secundario); /* Acento lateral */
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        font-weight: 700;
        font-size: 2rem;
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        border-bottom: 1px solid #eee;
        padding-bottom: 15px;
    }

        h1 i {
            color: var(--color-secundario);
            margin-right: 15px;
        }

    /* Estilo de la etiqueta (Título del campo) */
    .detail-label {
        color: var(--color-secundario);
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.8rem;
        margin-bottom: 4px;
        display: block;
    }

    /* Estilo del valor del campo */
    .detail-value {
        font-size: 1rem;
        padding-bottom: 10px;
        margin-bottom: 20px;
        color: var(--color-texto);
    }

    /* Contenedor de la descripción */
    .description-container {
        background-color: var(--color-bg-light);
        padding: 20px;
        border-radius: 8px;
        border-left: 5px solid var(--color-primario);
    }

    .description-text {
        white-space: pre-wrap;
        font-size: 0.95rem;
        line-height: 1.6;
    }

    /* Sección de Imagen */
    .image-details-container {
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        background-color: #f9f9f9;
        margin-bottom: 20px;
        border: 1px solid #ddd;
    }

    #detailImage {
        max-width: 100%;
        max-height: 350px;
        object-fit: contain;
        border-radius: 6px;
    }

    .img-placeholder {
        font-size: 40px;
        color: #ccc;
        padding: 50px 0;
    }

    /* Botones de Acción */
    .action-bar {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #ecf0f1;
        display: flex;
        gap: 15px;
        justify-content: flex-end; /* Alinear a la derecha */
    }

    .btn-action {
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
    }

        .btn-primary:hover {
            background-color: #4b6279;
            border-color: #4b6279;
        }

    .btn-danger {
        background-color: #c0392b;
        border-color: #c0392b;
    }

        .btn-danger:hover {
            background-color: #e74c3c;
            border-color: #e74c3c;
        }

    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-texto);
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            border-color: #95a5a6;
            color: white;
        }

    /* --------------------------------------------------
           ADAPTACIÓN RESPONSIVE
           -------------------------------------------------- */
    @@media (max-width: 991.98px) { /* A partir de tabletas y móviles */
        .details-card {
            padding: 25px;
            margin-top: 0;
            border-radius: 0;
            box-shadow: none;
        }
        /* Cambia el orden en móviles para que la imagen vaya primero */
        .order-lg-1 {
            order: 1;
        }

        .order-lg-2 {
            order: 2;
        }

        .action-bar {
            justify-content: center; /* Centrar botones en móvil */
            flex-wrap: wrap;
        }
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <!-- Contenedor principal de ancho responsivo -->
        <div class="col-xl-9 col-lg-10 col-12">

            <div class="details-card">

                <h1><i class="fas fa-box-open"></i> Detalles del Elemento: <strong class="text-secondary">@Model.Nombre_item</strong></h1>

                <div class="row">

                    <!-- COLUMNA IZQUIERDA: Imagen (Primer orden en Desktop, segundo en Mobile) -->
                    <div class="col-lg-4 col-md-5 order-lg-2">
                        <h5 class="text-center text-muted mb-3">Vista Previa</h5>
                        <div class="image-details-container">
                            @{
                                bool hasImage = !string.IsNullOrEmpty(Model.Imagen_data_base64);
                                string imageSrc = hasImage ? $"data:image/webp;base64,{Model.Imagen_data_base64}" : "#";
                            }
                            @if (hasImage)
                            {
                                <img id="detailImage" src="@imageSrc" alt="Imagen del elemento @Model.Nombre_item" class="img-fluid" />
                            }
                            else
                            {
                                <div class="img-placeholder">
                                    <i class="fas fa-image"></i>
                                    <p style="font-size: 1rem; margin-top: 10px;">No hay imagen disponible</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- COLUMNA DERECHA: Datos (Segundo orden en Desktop, primero en Mobile) -->
                    <div class="col-lg-8 col-md-7 order-lg-1">

                        <!-- FILA 1: Cantidad, Estado y Municipio -->
                        <div class="row">
                            <!-- 1. Cantidad -->
                            <div class="col-md-4 col-sm-6">
                                <span class="detail-label">Cantidad Actual</span>
                                <div class="detail-value">
                                    <strong class="text-primary">@Html.DisplayFor(model => model.Cantidad)</strong> unidades
                                </div>
                            </div>

                            <!-- 2. Estado -->
                            <div class="col-md-4 col-sm-6">
                                <span class="detail-label">Estado</span>
                                <div class="detail-value">
                                    @{
                                        string badgeClass = GetBadgeClass(Model?.Estado);
                                    }
                                    <span class="badge @badgeClass p-2 text-uppercase">
                                        @Html.DisplayFor(model => model.Estado)
                                    </span>
                                </div>
                            </div>

                            <!-- 3. Municipio -->
                            <div class="col-md-4 col-sm-12">
                                <span class="detail-label">Ubicación (Municipio)</span>
                                <div class="detail-value">
                                    @{
                                        string nombreMunicipio = municipioNombres != null && municipioNombres.ContainsKey(Model.MunicipioId)
                                        ? municipioNombres[Model.MunicipioId]
                                        : "N/A";
                                    }
                                    <i class="fas fa-map-marker-alt me-1"></i> <strong>@nombreMunicipio</strong>
                                </div>
                            </div>
                        </div>

                        <!-- FILA 2: Fechas e ID -->
                        <div class="row mt-2">
                            <!-- 4. Fecha de Ingreso -->
                            <div class="col-md-6">
                                <span class="detail-label">Fecha de Ingreso</span>
                                <div class="detail-value">
                                    <i class="far fa-calendar-alt me-1"></i> @Html.DisplayFor(model => model.Fecha_ingreso)
                                </div>
                            </div>

                            <!-- 5. ID de Inventario -->
                            <div class="col-md-6">
                                <span class="detail-label">ID de Elemento</span>
                                <div class="detail-value">
                                    <i class="fas fa-key me-1"></i> <code>@Html.DisplayFor(model => model.Id_inventario)</code>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- DESCRIPCIÓN (Full Width) -->
                <div class="row mt-4">
                    <div class="col-12">
                        <span class="detail-label">Descripción Detallada</span>
                        <div class="description-container">
                            <p class="description-text">
                                @Html.DisplayFor(model => model.Descripcion)
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Barra de Acciones -->
                <div class="action-bar">
                    <a asp-action="Index" class="btn btn-secondary btn-action">
                        <i class="fas fa-arrow-left me-2"></i> Volver a la Lista
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model?.Id_inventario" class="btn btn-primary btn-action">
                        <i class="fas fa-edit me-2"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model?.Id_inventario" class="btn btn-danger btn-action">
                        <i class="fas fa-trash-alt me-2"></i> Eliminar
                    </a>
                </div>
                <br />
                <br />
            </div>

        </div>
    </div>
</div>