@model AlcaldiaFront.DTOs.InventarioDTOs.InventarioRespuestaDTO
@{
    ViewData["Title"] = "Eliminar Elemento";
    Dictionary<int, string> municipioNombres = ViewBag.MunicipioNombres as Dictionary<int, string>;
    string GetBadgeClass(string estado) => estado?.ToLower() switch
    {
        "disponible" => "success",
        "agotado" => "warning",
        "baja" => "danger",
        _ => "secondary"
    };
}

<style>
    /* Estilos globales (Advertencia/Rojo) */
    :root {
        --color-primario: #34495e;
        --color-secundario: #f39c12;
        --color-peligro: #c0392b;
    }

    .delete-card {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        border-top: 5px solid var(--color-peligro);
    }

    h1 {
        color: var(--color-primario);
        font-weight: 600;
        margin-bottom: 5px;
    }

    h3 {
        color: var(--color-peligro);
        border-bottom: 2px solid #f2dede;
        padding-bottom: 10px;
        margin-bottom: 25px;
        font-weight: 400;
    }

    .dl-detalle dt {
        color: var(--color-secundario);
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
        padding-top: 10px;
    }

    .dl-detalle dd {
        margin-bottom: 5px;
        border-bottom: 1px dashed #ecf0f1;
        padding-bottom: 5px;
    }

    .delete-actions {
        margin-top: 25px;
        padding-top: 15px;
        border-top: 1px solid #bdc3c7;
    }
    /* Botones de acción específicos */
    .btn-danger {
        background-color: var(--color-peligro);
        border-color: var(--color-peligro);
        min-width: 120px;
    }

    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-primario);
        min-width: 120px;
    }
</style>

<div class="delete-card">
    <h1><i class="fas fa-trash-alt"></i> Eliminar Elemento</h1>
    <h3>🚨 ¿Estás seguro de que deseas eliminar este elemento de inventario?</h3>

    <div>
        <h4>Detalles del Elemento</h4>
        <hr />
        <dl class="row dl-detalle">
            <dt class="col-sm-4 col-md-3">
                Nombre de item)
            </dt>
            <dd class="col-sm-8 col-md-9">
                <h5>@Html.DisplayFor(model => model.Nombre_item)</h5>
            </dd>

            <dt class="col-sm-4 col-md-3">
                Descripcion
            </dt>
            <dd class="col-sm-8 col-md-9">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

            <dt class="col-sm-4 col-md-3">
                Fecha de ingreso
            </dt>
            <dd class="col-sm-8 col-md-9">
                @Html.DisplayFor(model => model.Fecha_ingreso)
            </dd>

            <dt class="col-sm-4 col-md-3">
                Cantidad
            </dt>
            <dd class="col-sm-8 col-md-9">
                <strong class="text-primary">@Html.DisplayFor(model => model.Cantidad) unidades</strong>
            </dd>

            <dt class="col-sm-4 col-md-3">
                Municipio
            </dt>
            <dd class="col-sm-9">
                @{
                    string nombreMunicipio = "ID de Municipio no encontrado";
                    if (municipioNombres != null && municipioNombres.ContainsKey(Model.MunicipioId))
                    {
                        nombreMunicipio = municipioNombres[Model.MunicipioId];
                    }
                }
                <strong class="text-primary">@nombreMunicipio</strong>

                @* <small class="text-muted">(ID: @Model.MunicipioId)</small> *@
            </dd>

            <dt class="col-sm-4 col-md-3">
                Estado
            </dt>
            <dd class="col-sm-8 col-md-9">
                @{
                    string badgeClass = GetBadgeClass(Model?.Estado);
                }
                <span class="badge bg-@badgeClass badge-lg">
                    @Html.DisplayFor(model => model.Estado)
                </span>
            </dd>
        </dl>
    </div>

    <div class="delete-actions">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id_inventario" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-exclamation-triangle"></i> Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancelar</a>
        </form>
    </div>
</div>