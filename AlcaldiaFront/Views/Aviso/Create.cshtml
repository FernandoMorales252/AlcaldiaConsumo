@model AlcaldiaFront.DTOs.AvisoDTOs.AvisoCrearDTO
@{
    ViewData["Title"] = "Crear Aviso";
}

<style>
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-fondo-claro: #ecf0f1;
        --color-texto: #2c3e50;
    }

    /* Contenedor principal del formulario (Tarjeta centralizada) */
    .form-container {
        background-color: white;
        padding: 30px;
        border-radius: 12px; /* Ligeramente más redondeado */
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15); /* Sombra más profunda */
        margin-top: 20px;
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        border-left: 6px solid var(--color-secundario);
        padding-left: 15px;
        margin-bottom: 25px;
        font-weight: 700; /* Más audaz */
        display: flex;
        align-items: center;
        gap: 10px;
    }

    h4 {
        color: #7f8c8d;
        font-weight: 400;
        margin-bottom: 20px;
    }

    /* Estilo de los campos de formulario */
    .form-control, .form-select {
        border: 1px solid #bdc3c7;
        border-radius: 6px; /* Bordes redondeados */
        padding: 10px 12px;
        transition: border-color 0.3s, box-shadow 0.3s;
        width: 100%; /* Asegura full width en columnas */
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--color-secundario);
            box-shadow: 0 0 0 0.25rem rgba(243, 156, 18, 0.35); /* Sombra de acento */
            outline: none;
        }

    /* Estilo para las etiquetas (labels) */
    .control-label {
        font-weight: 600;
        color: var(--color-texto);
        margin-bottom: 8px; /* Más espacio */
        display: block;
    }

    /* Botones de Acción */
    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #4b6279;
            border-color: #4b6279;
        }

    .btn-secondary {
        background-color: #ecf0f1; /* Fondo claro */
        border-color: #bdc3c7;
        color: var(--color-texto);
        font-weight: 600;
    }

        .btn-secondary:hover {
            background-color: #cfd6d8;
            border-color: #aeb5b7;
            color: var(--color-texto);
        }

    /* Contenedor de botones y acciones */
    .form-actions {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #dfe6e8; /* Línea separadora sutil */
    }

    /* Mensajes de validación */
    .text-danger {
        font-size: 0.8rem;
        font-style: italic;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="form-container">
    <h1><i class="fas fa-bullhorn"></i> Agregar Nuevo Aviso</h1>
    <h4>Completa los detalles para crear una nueva comunicación oficial.</h4>
    <hr />

    <!-- Usamos justify-content-center y col-12 para asegurar que el formulario sea el centro de atención y full responsive -->
    <div class="row justify-content-center">
        <!-- El formulario ocupará 10 columnas en pantallas grandes y el 100% en pequeñas -->
        <div class="col-12 col-lg-10">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                <!-- Bloque 1: Título (Full Width - Col-12) -->
                <div class="form-group mb-4">
                    <label asp-for="Titulo" class="control-label">Título del aviso</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ej: Cierre de calle en zona Sur por obras" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <!-- Bloque 2: Descripción (Full Width - Col-12) -->
                <div class="form-group mb-5">
                    <label asp-for="Descripcion" class="control-label">Descripción Detallada</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="5" placeholder="Detalles, motivos, tiempo que podría durar el aviso y acciones recomendadas..."></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Bloque 3: Distribución en 3 Columnas (Fecha, Tipo, Municipio) -->
                <!-- Clase g-4 para un buen espaciado entre las columnas en modo desktop/tablet -->
                <div class="row g-4">

                    <!-- Campo 1: Fecha de Registro (Col-12 en móvil, Col-md-4 en tablet/desktop) -->
                    <div class="col-12 col-md-4">
                        <div class="form-group">
                            <label asp-for="Fecha_Registro" class="control-label">Fecha de Registro</label>
                            <input asp-for="Fecha_Registro" class="form-control" type="date" />
                            <span asp-validation-for="Fecha_Registro" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Campo 2: Tipo de Aviso (Col-12 en móvil, Col-md-4 en tablet/desktop) -->
                    <div class="col-12 col-md-4">
                        <div class="form-group">
                            <label asp-for="Tipo" class="control-label">Tipo de aviso</label>
                            <select asp-for="Tipo" class="form-control form-select">
                                <option value="">-- Seleccionar Tipo --</option>
                                <option value="climatico">Climático</option>
                                <option value="festivo">Festivo / Evento</option>
                                <option value="educativo">Educativo</option>
                                <option value="seguridad">Seguridad Ciudadana</option>
                                <option value="obra">Obra Pública</option>
                                <option value="otro">Otro</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Campo 3: Municipio (Col-12 en móvil, Col-md-4 en tablet/desktop) -->
                    <div class="col-12 col-md-4">
                        <div class="form-group">
                            <label asp-for="MunicipioId" class="control-label">Municipio Destino</label>
                            <!-- Se asume que ViewBag.MunicipioId es un SelectList -->
                            <select asp-for="MunicipioId" class="form-control form-select" asp-items="ViewBag.MunicipioId">
                                <option value="">-- Seleccionar Municipio --</option>
                            </select>
                            <span asp-validation-for="MunicipioId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Bloque de Acciones: Alineados a la derecha y con espacio -->
                <div class="form-group form-actions d-flex justify-content-end gap-3">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancelar</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Crear Aviso</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="text-decoration-none text-muted"><i class="fas fa-arrow-left"></i> Volver a la Lista de Avisos</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}