@model AlcaldiaFront.DTOs.AvisoDTOs.AvisoRespuestaDTO
@using System.Collections.Generic

@{
    ViewData["Title"] = "Detalles del Aviso";
    Dictionary<int, string> municipioNombres = ViewBag.MunicipioNombres as Dictionary<int, string>;

    // Mapeo de tipo a clase de Bootstrap 5
    string GetBadgeClass(string tipo) => tipo?.ToLower() switch
    {
        "climatico" => "bg-success",
        "festivo" => "bg-primary",
        "educativo" => "bg-info text-dark",
        "otro" => "bg-danger",
        _ => "bg-secondary"
    };
}

<!-- Se requiere Bootstrap y Font Awesome para los iconos y el grid layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">

<style>
    /* --------------------------------------------------
           PATRÓN DE COLORES Y TIPOGRAFÍA
           -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita - Principal */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-texto: #2c3e50;
        --color-bg-light: #f4f6f9;
    }

    body {
        background-color: var(--color-bg-light);
        font-family: 'Inter', sans-serif;
        padding: 20px;
    }

    /* Contenedor principal de detalles (Tarjeta) */
    .details-card {
        background-color: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        margin-top: 30px;
        margin-bottom: 30px;
        border-top: 5px solid var(--color-secundario);
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        font-weight: 700;
        font-size: 2rem;
        display: flex;
        align-items: center;
        margin-bottom: 5px;
        padding-bottom: 10px;
    }

        h1 i {
            color: var(--color-secundario);
            margin-right: 15px;
            font-size: 1.5em;
        }

    /* Titulo del Aviso (Header de la Card) */
    .aviso-title {
        color: var(--color-primario);
        font-size: 1.8rem;
        font-weight: 700;
        margin-top: 0;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
    }

    /* Título de Sección */
    .section-title {
        color: var(--color-primario);
        font-weight: 600;
        margin-top: 25px;
        margin-bottom: 10px;
        font-size: 1.1rem;
        border-left: 3px solid var(--color-secundario);
        padding-left: 10px;
    }

    /* Etiqueta del campo */
    .detail-label {
        color: var(--color-secundario);
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.8rem;
        margin-bottom: 4px;
        display: block;
    }

    /* Valor del campo */
    .detail-value {
        font-size: 1rem;
        padding-bottom: 10px;
        margin-bottom: 20px;
        color: var(--color-texto);
    }

    /* Contenedor de la descripción */
    .description-container {
        background-color: var(--color-bg-light);
        padding: 25px;
        border-radius: 8px;
        border-left: 5px solid var(--color-primario);
        min-height: 150px;
    }

    .description-text {
        white-space: pre-wrap;
        font-size: 1rem;
        line-height: 1.6;
        color: var(--color-texto);
    }

    /* Estilo para los Badges */
    .badge-large {
        font-size: 0.9em;
        padding: 0.5em 0.8em;
    }

    /* Botones de Acción */
    .action-bar {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #ecf0f1;
        display: flex;
        gap: 15px;
        justify-content: flex-end; /* Alinear a la derecha */
    }

    .btn-action {
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
    }

    .btn-danger {
        background-color: #c0392b;
        border-color: #c0392b;
    }

    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-texto);
    }

    /* --------------------------------------------------
           ADAPTACIÓN RESPONSIVE
           -------------------------------------------------- */
    @@media (max-width: 991.98px) {
        .details-card {
            padding: 25px;
            margin-top: 0;
            border-radius: 0;
            box-shadow: none;
        }

        .action-bar {
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-action {
            /* En móvil, los botones tienen ancho completo si el layout lo permite, o se distribuyen */
            width: 48%; /* Dos botones por fila */
        }
        /* Asegura que los metadatos se apilen mejor en menos de 768px */
        .row > div {
            padding-left: 10px;
            padding-right: 10px;
        }
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <!-- Contenedor principal de ancho responsivo -->
        <div class="col-xl-9 col-lg-10 col-12">

            <div class="details-card">

                <h1><i class="fas fa-bullhorn"></i> Detalles del Aviso</h1>

                <!-- TITULO DEL AVISO -->
                <p class="aviso-title">@Html.DisplayFor(model => model.Titulo)</p>

                <!-- SECCIÓN 1: Metadatos (Tipo, Fecha, Ubicación) -->
                <h5 class="section-title">Información de Clasificación</h5>
                <div class="row">

                    <!-- 1. Tipo de Aviso -->
                    <div class="col-lg-4 col-md-6">
                        <span class="detail-label">Tipo de Aviso</span>
                        <div class="detail-value">
                            @{
                                string badgeClass = GetBadgeClass(Model?.Tipo);
                            }
                            <span class="badge @badgeClass badge-large text-uppercase">
                                <i class="fas fa-tag me-1"></i> @Html.DisplayFor(model => model.Tipo)
                            </span>
                        </div>
                    </div>

                    <!-- 2. Fecha de Registro -->
                    <div class="col-lg-4 col-md-6">
                        <span class="detail-label">Fecha de Registro</span>
                        <div class="detail-value">
                            <i class="far fa-calendar-alt me-1"></i> @Html.DisplayFor(model => model.Fecha_Registro)
                        </div>
                    </div>

                    <!-- 3. Municipio -->
                    <div class="col-lg-4 col-md-12">
                        <span class="detail-label">Municipio Objetivo</span>
                        <div class="detail-value">
                            @{
                                string nombreMunicipio = municipioNombres != null && municipioNombres.ContainsKey(Model.MunicipioId)
                                ? municipioNombres[Model.MunicipioId]
                                : "N/A";
                            }
                            <i class="fas fa-map-marker-alt me-1"></i> <strong>@nombreMunicipio</strong>
                        </div>
                    </div>

                </div>

                <!-- SECCIÓN 2: Descripción -->
                <h5 class="section-title">Detalle del Mensaje</h5>
                <div class="row">
                    <div class="col-12">
                        <div class="description-container">
                            <p class="description-text">
                                @Html.DisplayFor(model => model.Descripcion)
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Barra de Acciones -->
                <div class="action-bar">
                    <a asp-action="Index" class="btn btn-secondary btn-action">
                        <i class="fas fa-arrow-left me-2"></i> Volver a la Lista
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model?.Id_aviso" class="btn btn-primary btn-action">
                        <i class="fas fa-edit me-2"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model?.Id_aviso" class="btn btn-danger btn-action">
                        <i class="fas fa-trash-alt me-2"></i> Eliminar
                    </a>
                </div>
                <br />
                <br />
            </div>

        </div>
    </div>
</div>