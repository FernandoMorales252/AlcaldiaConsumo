@model IEnumerable<AlcaldiaFront.DTOs.AvisoDTOs.AvisoRespuestaDTO>
@using System.Collections.Generic
@{
    ViewData["Title"] = "Listado de Avisos";
    // Nota: Es mejor definir las variables de color en el _Layout.cshtml,
    // pero las incluimos aquí para la autonomía de la vista.
    Dictionary<int, string> municipioNombres = ViewBag.MunicipioNombres as Dictionary<int, string>;
    int pageSize = 5; // Define cuántos elementos quieres por página
}

<style>
    /* --------------------------------------------------
         * ------------------ PATRÓN DE COLORES Y ESTILOS BASE ------------------
         * -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-fondo-claro: #ecf0f1;
        --color-texto: #2c3e50;
    }

    /* Contenedor principal */
    .data-card {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px; /* Espacio inferior */
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        border-left: 5px solid var(--color-secundario);
        padding-left: 15px;
        margin-bottom: 25px;
        font-size: 1.8rem; /* Ajuste para móvil */
    }

    /* Estilos de la tabla */
    .table-hover tbody tr:hover {
        background-color: #f7f9fb; /* Efecto hover sutil */
    }

    .table thead th {
        background-color: var(--color-primario);
        color: white;
        border-bottom: 3px solid var(--color-secundario);
        font-weight: 600;
        vertical-align: middle;
        text-align: center;
        padding: 12px 8px; /* Mayor espacio */
    }

    .table tbody td {
        vertical-align: middle;
        font-size: 0.9rem;
        padding: 10px 8px;
    }

    .action-buttons a {
        margin: 0 2px; /* Espacio entre botones */
    }

    /* --------------------------------------------------
         * ------------------ RESPONSIVENESS DE LA TABLA (MÓVIL) ------------------
         * -------------------------------------------------- */
    @@media screen and (max-width: 767px) {
        /* Desactiva el desplazamiento horizontal de Bootstrap en este punto de quiebre */
        .table-responsive

    {
        overflow-x: unset;
    }

    /* Fuerza a la tabla a comportarse como un bloque */
    #proyectosTable {
        border: none;
        width: 100%;
    }

        /* Oculta los encabezados de la tabla estándar */
        #proyectosTable thead {
            display: none;
        }

        /* Transforma cada fila en una tarjeta */
        #proyectosTable tbody, #proyectosTable tr {
            display: block;
            width: 100%;
        }

        #proyectosTable tr {
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            background-color: white;
        }

        /* Transforma cada celda en una fila de la "tarjeta" */
        #proyectosTable td {
            display: block;
            text-align: right !important; /* Alineación del contenido de la celda */
            padding-left: 50% !important; /* Espacio para el label */
            position: relative;
            border: none;
            border-bottom: 1px dotted var(--color-fondo-claro); /* Separador de campos */
            white-space: normal; /* Permite que el texto se envuelva */
        }

            #proyectosTable td:last-child {
                border-bottom: none;
            }

            /* Muestra el encabezado (label) usando el atributo data-label */
            #proyectosTable td::before {
                content: attr(data-label);
                position: absolute;
                left: 10px;
                width: 45%; /* Ancho del label */
                padding-right: 10px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                font-weight: 700;
                text-align: left;
                color: var(--color-primario);
            }

            /* Estilo especial para la columna de Acciones en móvil */
            #proyectosTable td.action-buttons {
                text-align: center !important;
                padding: 10px 10px;
            }

                #proyectosTable td.action-buttons::before {
                    display: none; /* Oculta el label 'Acciones' */
                }

    /* Asegura que los badges se muestren bien en móvil */
    .badge {
        display: inline-block;
        min-width: 60px; /* Asegura un tamaño mínimo */
        padding: 5px 8px;
    }

    /* Ajuste para el botón principal en móvil */
    .btn-primary {
        width: 100%;
        margin-bottom: 15px;
    }

    }
</style>

<div class="data-card">

    <h1><i class="fas fa-tasks text-secondary"></i> @ViewData["Title"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Crear Nuevo Aviso</a>
    </p>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover" id="proyectosTable">
            <thead>
                <tr>
                    <th data-label="Aviso">Aviso</th>
                    <th data-label="Motivo">Motivo</th>
                    <th class="text-center" data-label="Fecha de registro">Fecha de registro</th>
                    <th class="text-center" data-label="Tipo de aviso">Tipo de aviso</th>
                    <th data-label="Municipio">Municipio</th>
                    <th class="text-center" data-label="Acciones">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Aviso">@Html.DisplayFor(modelItem => item.Titulo)</td>
                        <td data-label="Motivo">
                            @{
                                string motivoCorto = (!string.IsNullOrEmpty(item.Descripcion) && item.Descripcion.Length > 50) ?
                                (item.Descripcion.Substring(0, 50) + "...") :
                                item.Descripcion;
                                @motivoCorto
                            }
                        </td>
                        <td class="text-center" data-label="Fecha de registro">@Html.DisplayFor(modelItem => item.Fecha_Registro)</td>
                        <td class="text-center" data-label="Tipo de aviso">
                            @{
                                string badgeClass = item.Tipo switch
                                {
                                    "climatico" => "success",
                                    "festivo" => "primary",
                                    "educativo" => "info",
                                    "otro" => "danger",
                                    _ => "secondary"
                                };
                            }
                            <span class="badge bg-@badgeClass">
                                @Html.DisplayFor(modelItem => item.Tipo)
                            </span>
                        </td>
                        <td data-label="Municipio">
                            @{
                                string nombreMunicipio = "N/A";
                                if (municipioNombres != null && municipioNombres.ContainsKey(item.MunicipioId))
                                {
                                    nombreMunicipio = municipioNombres[item.MunicipioId];
                                }
                            }
                            @nombreMunicipio
                        </td>
                        <td class="text-center action-buttons" data-label="Acciones">
                            <a asp-action="Edit" asp-route-id="@item.Id_aviso" class="btn btn-sm btn-outline-primary" title="Editar"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id_aviso" class="btn btn-sm btn-outline-info" title="Detalles"><i class="fas fa-info-circle"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id_aviso" class="btn btn-sm btn-outline-danger" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav class="pagination-container" aria-label="Navegación de Proyectos">
        <ul class="pagination" id="pagination-ul"></ul>
    </nav>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center mt-4" role="alert">
            <h4>No hay avisos registrados</h4>
            <p>Comienza creando tu primer aviso.</p>
            <a asp-action="Create" class="btn btn-primary">Crear Primer Aviso</a>
        </div>
    }

</div>

@section Scripts {
    <script>
        // ... (El script de paginación se mantiene idéntico, ya es funcional)
        $(document).ready(function () {
            // Configuración de Paginación
            const table = document.getElementById('proyectosTable');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            const pageSize = @pageSize; // Viene de la variable Razor
            const totalPages = Math.ceil(rows.length / pageSize);
            const paginationUl = $('#pagination-ul');

            function displayPage(page) {
                const startIndex = (page - 1) * pageSize;
                const endIndex = startIndex + pageSize;

                rows.forEach((row, index) => {
                    row.style.display = (index >= startIndex && index < endIndex) ? '' : 'none';
                });

                updatePaginationControls(page);
            }

            function updatePaginationControls(currentPage) {
                paginationUl.empty(); // Limpiar la paginación existente

                // Botón Anterior
                const prevDisabled = currentPage === 1 ? 'disabled' : '';
                paginationUl.append(`
                    <li class="page-item ${prevDisabled}">
                        <a class="page-link" href="#" data-page="${currentPage - 1}"><i class="fas fa-angle-left"></i> Anterior</a>
                    </li>
                `);

                // Botones de Páginas Numeradas
                // Lógica de truncado de páginas para evitar exceso de botones
                let startPage = Math.max(1, currentPage - 1);
                let endPage = Math.min(totalPages, currentPage + 1);

                if (currentPage === 1) endPage = Math.min(totalPages, 3);
                if (currentPage === totalPages) startPage = Math.max(1, totalPages - 2);

                if (startPage > 1) {
                    paginationUl.append(`<li class="page-item"><a class="page-link" href="#" data-page="1">1</a></li>`);
                    if (startPage > 2) paginationUl.append(`<li class="page-item disabled"><span class="page-link">...</span></li>`);
                }

                for (let i = startPage; i <= endPage; i++) {
                    const active = i === currentPage ? 'active' : '';
                    paginationUl.append(`
                        <li class="page-item ${active}">
                            <a class="page-link" href="#" data-page="${i}">${i}</a>
                        </li>
                    `);
                }

                if (endPage < totalPages) {
                    if (endPage < totalPages - 1) paginationUl.append(`<li class="page-item disabled"><span class="page-link">...</span></li>`);
                    paginationUl.append(`<li class="page-item"><a class="page-link" href="#" data-page="${totalPages}">${totalPages}</a></li>`);
                }

                // Botón Siguiente
                const nextDisabled = currentPage === totalPages ? 'disabled' : '';
                paginationUl.append(`
                    <li class="page-item ${nextDisabled}">
                        <a class="page-link" href="#" data-page="${currentPage + 1}">Siguiente <i class="fas fa-angle-right"></i></a>
                    </li>
                `);
            }

            // Manejador de clic para los botones de paginación
            paginationUl.on('click', 'a.page-link', function (e) {
                e.preventDefault();
                const newPage = parseInt($(this).data('page'));

                if (!isNaN(newPage) && newPage >= 1 && newPage <= totalPages) {
                    displayPage(newPage);
                }
            });

            // Inicializar la tabla y la paginación en la página 1
            if (rows.length > 0) {
                displayPage(1);
            }
        });
    </script>
}