@model IEnumerable<AlcaldiaFront.DTOs.ProyectoDTOs.ProyectoRespuestaDTo>
@using System.Collections.Generic
@{
    ViewData["Title"] = "Listado de Proyectos";
    Dictionary<int, string> municipioNombres = ViewBag.MunicipioNombres as Dictionary<int, string>;
    int pageSize = 5; // Define cuántos elementos quieres por página
}

<style>
    /* --------------------------------------------------
         * ------------------ PATRÓN DE COLORES Y ESTILOS BASE ------------------
         * -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-fondo-claro: #ecf0f1;
        --color-texto: #2c3e50;
    }

    /* Contenedor principal */
    .data-card {
        background-color: white;
        padding: 20px;
        border-radius: 10px; /* Borde ligeramente más redondeado */
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15); /* Sombra más profunda */
        margin-bottom: 30px;
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        border-left: 6px solid var(--color-secundario); /* Borde más grueso */
        padding-left: 18px;
        margin-bottom: 25px;
        font-size: 2rem;
        font-weight: 300; /* Diseño más moderno */
    }

    /* Botón Crear Nuevo */
    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
        transition: all 0.3s ease;
        padding: 8px 15px;
        font-weight: 500;
    }

        .btn-primary:hover {
            background-color: #4b6279;
            border-color: #4b6279;
            transform: translateY(-1px); /* Efecto 3D sutil */
        }

    /* Estilo de la tabla */
    .table-hover tbody tr:hover {
        background-color: #f7f9fb; /* Efecto hover sutil */
        transform: scale(1.005);
        transition: background-color 0.2s, transform 0.2s;
    }

    .table thead th {
        background-color: var(--color-primario);
        color: white;
        border-bottom: 4px solid var(--color-secundario);
        font-weight: 600;
        vertical-align: middle;
        text-align: center;
        padding: 12px 8px;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    .table tbody td {
        vertical-align: middle;
        font-size: 0.9rem;
        padding: 10px 8px;
        color: var(--color-texto);
    }

        /* Estilos específicos para celdas */

        /* Proyecto y Proposito */
        .table tbody td:first-child {
            font-weight: 600;
            color: var(--color-primario);
        }

    /* Presupuesto */
    .budget-cell {
        font-weight: 700;
        color: #27ae60; /* Verde para dinero/éxito */
        text-align: right;
    }

    /* Fechas */
    .date-cell {
        font-size: 0.85rem;
        color: #7f8c8d; /* Gris para fechas */
    }

    /* Badges de Estado */
    .badge {
        font-weight: 600;
        padding: 5px 10px;
        border-radius: 15px;
    }

    /* Estilos para los botones de la paginación */
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 25px;
    }

    .page-item .page-link {
        color: var(--color-primario);
        border-color: var(--color-fondo-claro);
        transition: background-color 0.3s, color 0.3s;
    }

    .page-item.active .page-link {
        background-color: var(--color-secundario);
        border-color: var(--color-secundario);
        color: white;
        font-weight: bold;
    }

        .page-item.active .page-link:hover {
            background-color: var(--color-secundario);
            border-color: var(--color-secundario);
            color: white;
        }

    .action-buttons a {
        margin: 0 2px;
    }

    /* --------------------------------------------------
         * ------------------ RESPONSIVENESS DE LA TABLA (MÓVIL) ------------------
         * -------------------------------------------------- */
    @@media screen and (max-width: 991px) { /* Aumentamos el breakpoint para tablas */
        /* Desactiva el desplazamiento horizontal de Bootstrap en este punto de quiebre */
        .table-responsive

    {
        overflow-x: unset;
    }

    /* Oculta columnas menos importantes en tabletas */
    #proyectosTable thead th:nth-child(2), /* Proposito */
    #proyectosTable tbody td:nth-child(2) {
        display: none;
    }

    /* Fuerza a la tabla a comportarse como un bloque */
    #proyectosTable, #proyectosTable tbody, #proyectosTable tr {
        display: block;
        width: 100%;
    }

        /* Oculta los encabezados de la tabla estándar */
        #proyectosTable thead {
            display: none;
        }

        #proyectosTable tr {
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-left: 5px solid var(--color-primario); /* Borde de color para destacar el registro */
            border-radius: 6px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            background-color: white;
            padding: 5px 0;
        }

        /* Transforma cada celda en una fila de la "tarjeta" */
        #proyectosTable td {
            display: block;
            text-align: right !important;
            padding-left: 55% !important; /* Espacio para el label */
            position: relative;
            border: none;
            border-bottom: 1px dotted var(--color-fondo-claro);
            white-space: normal;
        }

            #proyectosTable td:last-child {
                border-bottom: none;
            }

            /* Muestra el encabezado (label) usando el atributo data-label */
            #proyectosTable td::before {
                content: attr(data-label);
                position: absolute;
                left: 10px;
                width: 50%;
                padding-right: 10px;
                font-weight: 700;
                text-align: left;
                color: var(--color-primario);
                font-size: 0.9rem;
            }

            /* Estilo especial para la columna de Acciones en móvil */
            #proyectosTable td.action-buttons {
                text-align: center !important;
                padding: 10px 10px;
            }

                #proyectosTable td.action-buttons::before {
                    display: none;
                }

    /* Ajuste para el botón principal en móvil */
    .btn-primary {
        width: 100%;
        margin-bottom: 15px;
    }

    /* Asegurar que el presupuesto quede alineado */
    .budget-cell {
        text-align: right !important;
    }

    }
</style>

<div class="data-card">

    <h1><i class="fas fa-project-diagram"></i> @ViewData["Title"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Crear Nuevo Proyecto</a>
    </p>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover" id="proyectosTable">
            <thead>
                <tr>
                    <th data-label="Proyecto">Proyecto</th>
                    <th data-label="Propósito">Propósito</th>
                    <th class="text-center" data-label="Inicio">Inicio</th>
                    <th class="text-center" data-label="Fin">Finalización</th>
                    <th class="text-right" data-label="Presupuesto">Presupuesto</th>
                    <th class="text-center" data-label="Estado">Estado</th>
                    <th data-label="Municipio">Municipio</th>
                    <th class="text-center" data-label="Acciones">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Proyecto">@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td data-label="Propósito">
                            @{
                                string propositoCorto = (!string.IsNullOrEmpty(item.Descripcion) && item.Descripcion.Length > 50) ?
                                (item.Descripcion.Substring(0, 50) + "...") :
                                item.Descripcion;
                                @propositoCorto
                            }
                        </td>
                        <td class="text-center date-cell" data-label="Inicio">@Html.DisplayFor(modelItem => item.Fecha_Inicio)</td>
                        <td class="text-center date-cell" data-label="Fin">@Html.DisplayFor(modelItem => item.Fecha_Fin)</td>
                        <td class="budget-cell" data-label="Presupuesto">$@Html.DisplayFor(modelItem => item.Presupuesto)</td>
                        <td class="text-center" data-label="Estado">
                            @{
                                string badgeClass = item.Estado switch
                                {
                                    "finalizado" => "success",
                                    "en_ejecucion" => "primary",
                                    "planificado" => "info",
                                    "cancelado" => "danger",
                                    _ => "secondary"
                                };
                            }
                            <span class="badge bg-@badgeClass">
                                @Html.DisplayFor(modelItem => item.Estado)
                            </span>
                        </td>
                        <td data-label="Municipio">
                            @{
                                string nombreMunicipio = "N/A";
                                if (municipioNombres != null && municipioNombres.ContainsKey(item.MunicipioId))
                                {
                                    nombreMunicipio = municipioNombres[item.MunicipioId];
                                }
                            }
                            @nombreMunicipio
                        </td>
                        <td class="text-center action-buttons" data-label="Acciones">
                            <a asp-action="Edit" asp-route-id="@item.Id_Proyecto" class="btn btn-sm btn-outline-primary" title="Editar"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id_Proyecto" class="btn btn-sm btn-outline-info" title="Detalles"><i class="fas fa-info-circle"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id_Proyecto" class="btn btn-sm btn-outline-danger" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav class="pagination-container" aria-label="Navegación de Proyectos">
        <ul class="pagination" id="pagination-ul"></ul>
    </nav>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center mt-4" role="alert">
            <h4>No hay proyectos registrados</h4>
            <p>Comienza creando tu primer proyecto.</p>
            <a asp-action="Create" class="btn btn-primary">Crear Primer Proyecto</a>
        </div>
    }

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Configuración de Paginación
            const table = document.getElementById('proyectosTable');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            const pageSize = @pageSize; // Viene de la variable Razor
            const totalPages = Math.ceil(rows.length / pageSize);
            const paginationUl = $('#pagination-ul');

            function displayPage(page) {
                const startIndex = (page - 1) * pageSize;
                const endIndex = startIndex + pageSize;

                rows.forEach((row, index) => {
                    row.style.display = (index >= startIndex && index < endIndex) ? '' : 'none';
                });

                updatePaginationControls(page);
            }

            function updatePaginationControls(currentPage) {
                paginationUl.empty(); // Limpiar la paginación existente

                // Truncamiento de páginas mejorado (similar al anterior)
                const pagesToShow = 5;
                let startPage = Math.max(1, currentPage - Math.floor(pagesToShow / 2));
                let endPage = Math.min(totalPages, currentPage + Math.floor(pagesToShow / 2));

                if (endPage - startPage + 1 < pagesToShow) {
                    if (startPage > 1) {
                        startPage = Math.max(1, startPage - (pagesToShow - (endPage - startPage + 1)));
                    }
                    if (endPage < totalPages) {
                        endPage = Math.min(totalPages, endPage + (pagesToShow - (endPage - startPage + 1)));
                    }
                }

                // Botón Anterior
                const prevDisabled = currentPage === 1 ? 'disabled' : '';
                paginationUl.append(`
                    <li class="page-item ${prevDisabled}">
                        <a class="page-link" href="#" data-page="${currentPage - 1}"><i class="fas fa-angle-left"></i> Anterior</a>
                    </li>
                `);

                // Botones de Páginas Numeradas
                if (startPage > 1) {
                    paginationUl.append(`<li class="page-item"><a class="page-link" href="#" data-page="1">1</a></li>`);
                    if (startPage > 2) paginationUl.append(`<li class="page-item disabled"><span class="page-link">...</span></li>`);
                }

                for (let i = startPage; i <= endPage; i++) {
                    const active = i === currentPage ? 'active' : '';
                    paginationUl.append(`
                        <li class="page-item ${active}">
                            <a class="page-link" href="#" data-page="${i}">${i}</a>
                        </li>
                    `);
                }

                if (endPage < totalPages) {
                    if (endPage < totalPages - 1) paginationUl.append(`<li class="page-item disabled"><span class="page-link">...</span></li>`);
                    paginationUl.append(`<li class="page-item"><a class="page-link" href="#" data-page="${totalPages}">${totalPages}</a></li>`);
                }

                // Botón Siguiente
                const nextDisabled = currentPage === totalPages ? 'disabled' : '';
                paginationUl.append(`
                    <li class="page-item ${nextDisabled}">
                        <a class="page-link" href="#" data-page="${currentPage + 1}">Siguiente <i class="fas fa-angle-right"></i></a>
                    </li>
                `);
            }

            // Manejador de clic para los botones de paginación
            paginationUl.on('click', 'a.page-link', function (e) {
                e.preventDefault();
                const newPage = parseInt($(this).data('page'));

                if (!isNaN(newPage) && newPage >= 1 && newPage <= totalPages) {
                    displayPage(newPage);
                }
            });

            // Inicializar la tabla y la paginación en la página 1
            if (rows.length > 0) {
                displayPage(1);
            }
        });
    </script>
}