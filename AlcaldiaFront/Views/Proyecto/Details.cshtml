@model AlcaldiaFront.DTOs.ProyectoDTOs.ProyectoRespuestaDTo
@using System.Collections.Generic

@{
    ViewData["Title"] = "Detalles del Proyecto";
    Dictionary<int, string> municipioNombres = ViewBag.MunicipioNombres as Dictionary<int, string>;

    // Mapeo simple de estado a clase de Bootstrap para los badges
    string GetBadgeClass(string estado) => estado?.ToLower() switch
    {
        "finalizado" => "bg-success",
        "en_ejecucion" => "bg-primary",
        "planificado" => "bg-info text-dark",
        "cancelado" => "bg-danger",
        _ => "bg-secondary"
    };

    // Función para formatear presupuesto
    string FormatCurrency(decimal? amount) => amount.HasValue ? string.Format("{0:C}", amount.Value) : "$0.00";
}

<!-- Se requiere Bootstrap y Font Awesome para los iconos y el grid layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">


<style>
    /* --------------------------------------------------
           PATRÓN DE COLORES FORMAL ADAPTADO A VISTAS DE DETALLE
           -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita - Principal */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-texto: #2c3e50;
        --color-texto-claro: #7f8c8d;
        --color-bg-light: #f4f6f9;
    }

    body {
        background-color: var(--color-bg-light);
        font-family: 'Inter', sans-serif;
    }

    /* Contenedor principal de detalles (Tarjeta de resumen) */
    .details-card {
        background-color: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        margin-top: 30px;
        margin-bottom: 30px;
    }

    .header-section {
        border-bottom: 2px solid var(--color-secundario);
        padding-bottom: 15px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        font-weight: 700;
        font-size: 2rem;
        display: flex;
        align-items: center;
    }

        h1 i {
            color: var(--color-secundario);
            margin-right: 15px;
        }

    h4 {
        color: var(--color-texto-claro);
        font-weight: 400;
        font-size: 1.1rem;
    }

    /* Estilo de la etiqueta (Título del campo) */
    .detail-label {
        color: var(--color-primario); /* Etiquetas en color primario */
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.85rem;
        margin-bottom: 5px;
        display: block;
    }

    /* Estilo del valor del campo */
    .detail-value {
        font-size: 1rem;
        padding-bottom: 10px;
        border-bottom: 1px dashed #ecf0f1;
        margin-bottom: 20px; /* Espacio entre filas */
        word-wrap: break-word; /* Para asegurar que las descripciones largas no desborden */
        color: var(--color-texto);
    }

    /* Contenedor de la descripción */
    .description-container {
        margin-top: 30px;
        background-color: var(--color-bg-light);
        padding: 20px;
        border-radius: 8px;
        border-left: 5px solid var(--color-primario);
    }

    .description-text {
        white-space: pre-wrap;
        font-size: 1rem;
        line-height: 1.6;
        color: var(--color-texto);
    }

    /* Botones de Acción */
    .action-bar {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #ecf0f1;
        display: flex;
        gap: 15px;
        justify-content: flex-start;
    }

    .btn-action {
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        min-width: 120px;
    }

    /* Adaptando los estilos de los botones al patrón de color */
    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
    }

        .btn-primary:hover {
            background-color: #4b6279;
            border-color: #4b6279;
        }

    .btn-danger {
        background-color: #c0392b;
        border-color: #c0392b;
    }

        .btn-danger:hover {
            background-color: #e74c3c;
            border-color: #e74c3c;
        }

    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-primario);
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            border-color: #95a5a6;
            color: white;
        }

    /* --------------------------------------------------
           ADAPTACIÓN RESPONSIVE
           -------------------------------------------------- */
    @@media (max-width: 767.98px) {
        .details-card {
            padding: 20px;
            margin-top: 0;
            border-radius: 0;
            box-shadow: none;
        }

        .header-section {
            flex-direction: column;
            align-items: flex-start;
        }

        .detail-value {
            margin-bottom: 15px;
        }

        .action-bar {
            flex-direction: column;
            gap: 10px;
        }

        .btn-action {
            width: 100%;
        }
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <!-- Contenedor principal de ancho responsivo -->
        <div class="col-lg-8 col-md-10 col-12">

            <div class="details-card">

                <div class="header-section">
                    <div>
                        <h1><i class="fas fa-project-diagram"></i> @Model.Nombre</h1>
                        <h4>Ficha Técnica y Clasificación del Proyecto @Model.Id_Proyecto</h4>
                    </div>
                    <!-- Estado como badge grande en el encabezado -->
                    <span class="badge @GetBadgeClass(Model.Estado) p-3 fs-6 fw-bold text-uppercase d-none d-md-block">
                        <i class="fas fa-clock me-1"></i> @Html.DisplayFor(model => model.Estado)
                    </span>
                </div>

                <!-- GRUPO DE DATOS CLAVE (Dos columnas en desktop, una en móvil) -->
                <div class="row">

                    <!-- Columna Izquierda (Clasificación y Presupuesto) -->
                    <div class="col-md-6">

                        <!-- 1. Estado (Badge, visible en móvil en este punto) -->
                        <div class="detail-group d-block d-md-none">
                            <span class="detail-label">Estado Actual</span>
                            <div class="detail-value">
                                <span class="badge @GetBadgeClass(Model.Estado) p-2 text-uppercase">
                                    <i class="fas fa-clock me-1"></i> @Html.DisplayFor(model => model.Estado)
                                </span>
                            </div>
                        </div>

                        <!-- 2. Presupuesto destinado -->
                        <div class="detail-group">
                            <span class="detail-label">Presupuesto Destinado</span>
                            <div class="detail-value">
                                <strong class="text-success"><i class="fas fa-dollar-sign me-1"></i> @FormatCurrency(Model.Presupuesto)</strong>
                            </div>
                        </div>

                        <!-- 3. Municipio -->
                        <div class="detail-group">
                            <span class="detail-label">Municipio de Ejecución</span>
                            <div class="detail-value">
                                @{
                                    string nombreMunicipio = "N/A";
                                    if (municipioNombres != null && municipioNombres.ContainsKey(Model.MunicipioId))
                                    {
                                        nombreMunicipio = municipioNombres[Model.MunicipioId];
                                    }
                                }
                                <strong class="text-info"><i class="fas fa-city me-1"></i> @nombreMunicipio</strong>
                            </div>
                        </div>
                    </div>

                    <!-- Columna Derecha (Fechas) -->
                    <div class="col-md-6">

                        <!-- 4. Fecha de Inicio -->
                        <div class="detail-group">
                            <span class="detail-label">Fecha de Inicio</span>
                            <div class="detail-value">
                                <i class="far fa-calendar-alt me-1"></i> @Html.DisplayFor(model => model.Fecha_Inicio)
                            </div>
                        </div>

                        <!-- 5. Fecha de Finalización -->
                        <div class="detail-group">
                            <span class="detail-label">Fecha de Finalización</span>
                            <div class="detail-value">
                                <i class="far fa-calendar-check me-1"></i> @Html.DisplayFor(model => model.Fecha_Fin)
                            </div>
                        </div>

                    </div>
                </div>

                <!-- DESCRIPCIÓN (Full Width - Contenedor destacado) -->
                <div class="row">
                    <div class="col-12">
                        <span class="detail-label">Descripción del Proyecto</span>
                        <div class="description-container">
                            <p class="description-text">
                                @Html.DisplayFor(model => model.Descripcion)
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Barra de Acciones (Diseño responsivo y apilado en móvil) -->
                <div class="action-bar">
                    <a asp-action="Edit" asp-route-id="@Model.Id_Proyecto" class="btn btn-primary btn-action">
                        <i class="fas fa-edit me-2"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id_Proyecto" class="btn btn-danger btn-action">
                        <i class="fas fa-trash-alt me-2"></i> Eliminar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-action">
                        <i class="fas fa-arrow-left me-2"></i> Volver a la Lista
                    </a>
                </div>

                <br />
                <br />
            </div>

        </div>
    </div>
</div>

