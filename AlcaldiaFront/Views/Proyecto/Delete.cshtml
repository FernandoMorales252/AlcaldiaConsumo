@model AlcaldiaFront.DTOs.ProyectoDTOs.ProyectoRespuestaDTo
@using System.Collections.Generic

@{
    ViewData["Title"] = "Confirmación de Eliminación de Proyecto";
    Dictionary<int, string> municipioNombres = ViewBag.MunicipioNombres as Dictionary<int, string>;

    // Función para asignar clase de color al estado del proyecto
    string GetBadgeClass(string estado) => estado?.ToLower() switch
    {
        "en curso" => "primary",
        "finalizado" => "success",
        "pausado" => "warning",
        "cancelado" => "danger",
        _ => "secondary"
    };
}

<!-- Se requiere Bootstrap y Font Awesome para los iconos y el grid layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">

<style>
    /* --------------------------------------------------
           PATRÓN DE COLORES Y TIPOGRAFÍA
           -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-peligro: #c0392b; /* Rojo de Advertencia */
        --color-bg-light: #f4f6f9;
        --color-texto-claro: #7f8c8d;
        --color-texto: #2c3e50;
    }

    body {
        background-color: var(--color-bg-light);
        font-family: 'Inter', sans-serif;
    }

    /* Contenedor principal de eliminación (Tarjeta de advertencia) */
    .delete-card {
        background-color: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-top: 30px;
        margin-bottom: 30px;
        border-top: 6px solid var(--color-peligro); /* Borde de peligro fuerte */
        max-width: 700px; /* Ancho ajustado para no tener imagen */
        margin-left: auto;
        margin-right: auto;
    }

    /* Encabezado y Advertencia */
    h1 {
        color: var(--color-primario);
        font-weight: 700;
        margin-bottom: 20px;
        font-size: 2rem;
    }

    .warning-message {
        background-color: #fcebeb; /* Fondo rosado claro */
        color: var(--color-peligro);
        border: 1px solid var(--color-peligro);
        padding: 15px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
    }

        .warning-message i {
            font-size: 1.5rem;
            margin-right: 15px;
        }

    /* Detalles del Proyecto a Eliminar */
    .detail-container h4 {
        color: var(--color-primario);
        font-weight: 600;
        font-size: 1.25rem;
        padding-bottom: 10px;
        margin-bottom: 15px;
        border-bottom: 1px solid #eee;
    }

    .detail-label {
        color: var(--color-secundario); /* Etiquetas en color de acento */
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.8rem;
        margin-bottom: 2px;
        display: block;
    }

    .detail-value {
        font-size: 1rem;
        color: var(--color-texto);
        margin-bottom: 15px;
        word-wrap: break-word; /* Para descripciones largas */
    }

    .badge-lg {
        padding: 0.5em 0.8em;
        font-size: 0.85em;
        font-weight: 600;
    }

    /* Botones de Acción */
    .delete-actions {
        margin-top: 30px;
        padding-top: 25px;
        border-top: 1px solid #eee;
        display: flex;
        gap: 20px;
        justify-content: center; /* Centrar botones */
    }

    .btn-action {
        padding: 12px 30px;
        font-weight: 700;
        border-radius: 8px;
        min-width: 180px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Botón Eliminar (Rojo - Destacado) */
    .btn-danger {
        background-color: var(--color-peligro);
        border-color: var(--color-peligro);
        transition: transform 0.2s;
    }

        .btn-danger:hover {
            background-color: #e74c3c;
            border-color: #e74c3c;
            transform: translateY(-2px);
        }

    /* Botón Cancelar (Secundario - Menos prominente) */
    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-primario);
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            border-color: #95a5a6;
            color: white;
        }

    /* --------------------------------------------------
           ADAPTACIÓN RESPONSIVE
           -------------------------------------------------- */
    @@media (max-width: 767.98px) {
        .delete-card {
            padding: 20px;
            margin-top: 0;
            border-radius: 0;
            box-shadow: none;
        }

        .delete-actions {
            flex-direction: column; /* Apilar botones en móvil */
            gap: 15px;
        }

        .btn-action {
            width: 100%; /* Botones de ancho completo */
        }
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-9 col-12">

            <div class="delete-card">

                <h1><i class="fas fa-project-diagram me-2"></i> Eliminar Proyecto</h1>

                <!-- MENSAJE DE ADVERTENCIA CRÍTICO -->
                <div class="warning-message">
                    <i class="fas fa-exclamation-triangle"></i>
                    Esta acción es permanente e irreversible. ¿Estás seguro de que deseas eliminar el proyecto @Model.Nombre?
                </div>

                <!-- BOTONES DE ACCIÓN (Formulario de Eliminación) -->
                <div class="delete-actions">
                    <form asp-action="Delete" class="d-flex justify-content-center w-100 flex-column flex-md-row gap-3">
                        <a asp-action="Index" class="btn btn-secondary btn-action order-2 order-md-1">
                            <i class="fas fa-times-circle me-2"></i> Cancelar
                        </a>
                        <input type="hidden" asp-for="Id_Proyecto" />
                        <button type="submit" class="btn btn-danger btn-action order-1 order-md-2">
                            <i class="fas fa-trash-alt me-2"></i> Eliminar
                        </button>
                    </form>
                </div>

                <hr />

                <div class="row detail-container">

                    <!-- DETALLES DEL PROYECTO (Columna única, distribuida en filas) -->
                    <div class="col-12 details-section">
                        <h4>Detalles del Proyecto a Eliminar</h4>

                        <div class="row">
                            <!-- Nombre y Estado -->
                            <div class="col-md-6 col-12 mb-3">
                                <span class="detail-label">Nombre del Proyecto</span>
                                <div class="detail-value">
                                    <i class="fas fa-file-signature me-1 text-primary"></i>
                                    <strong>@Html.DisplayFor(model => model.Nombre)</strong>
                                </div>
                            </div>
                            <div class="col-md-6 col-12 mb-3">
                                <span class="detail-label">Estado Actual</span>
                                <div class="detail-value">
                                    @{
                                        string estadoProyecto = Model?.Estado;
                                        string badgeClass = GetBadgeClass(estadoProyecto);
                                    }
                                    <span class="badge rounded-pill bg-@badgeClass badge-lg">
                                        @estadoProyecto
                                    </span>
                                </div>
                            </div>

                            <!-- Descripción (Full width) -->
                            <div class="col-12 mb-3">
                                <span class="detail-label">Descripción</span>
                                <div class="detail-value text-muted small">
                                    @Html.DisplayFor(model => model.Descripcion)
                                </div>
                            </div>

                            <!-- Fechas -->
                            <div class="col-md-6 col-12 mb-3">
                                <span class="detail-label">Fecha de Inicio</span>
                                <div class="detail-value">
                                    <i class="fas fa-calendar-alt me-1"></i> @Html.DisplayFor(model => model.Fecha_Inicio)
                                </div>
                            </div>
                            <div class="col-md-6 col-12 mb-3">
                                <span class="detail-label">Fecha de Finalización</span>
                                <div class="detail-value">
                                    <i class="fas fa-calendar-check me-1"></i> @Html.DisplayFor(model => model.Fecha_Fin)
                                </div>
                            </div>

                            <!-- Presupuesto y Municipio -->
                            <div class="col-md-6 col-12 mb-3">
                                <span class="detail-label">Presupuesto Destinado</span>
                                <div class="detail-value">
                                    <i class="fas fa-money-bill-wave me-1 text-success"></i>
                                    <strong>$@Html.DisplayFor(model => model.Presupuesto)</strong>
                                </div>
                            </div>
                            <div class="col-md-6 col-12 mb-3">
                                <span class="detail-label">Municipio</span>
                                <div class="detail-value">
                                    @{
                                        string nombreMunicipio = municipioNombres != null && municipioNombres.ContainsKey(Model.MunicipioId)
                                        ? municipioNombres[Model.MunicipioId]
                                        : "N/A";
                                    }
                                    <i class="fas fa-city me-1 text-info"></i> <strong>@nombreMunicipio</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

               
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @{
        // Opcional, pero se recomienda siempre para mantener la estructura de la vista Razor
    }
}