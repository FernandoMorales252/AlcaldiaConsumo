@model AlcaldiaFront.DTOs.ProyectoDTOs.ProyectoCrearDTo
@{
    ViewData["Title"] = "Crear Proyecto";
}

<style>
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-fondo-claro: #ecf0f1;
        --color-texto: #2c3e50;
    }

    /* Contenedor principal del formulario (Tarjeta centralizada) */
    .form-container {
        background-color: white;
        padding: 30px;
        border-radius: 12px; /* Ligeramente más redondeado */
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15); /* Sombra más profunda */
        margin-top: 20px;
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        border-left: 6px solid var(--color-secundario);
        padding-left: 15px;
        margin-bottom: 25px;
        font-weight: 700; /* Más audaz */
        display: flex;
        align-items: center;
        gap: 10px;
    }

    h4 {
        color: #7f8c8d;
        font-weight: 400;
        margin-bottom: 20px;
    }

    /* Estilo de los campos de formulario */
    .form-control, .form-select {
        border: 1px solid #bdc3c7;
        border-radius: 6px; /* Bordes redondeados */
        padding: 10px 12px;
        transition: border-color 0.3s, box-shadow 0.3s;
        width: 100%;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--color-secundario);
            box-shadow: 0 0 0 0.25rem rgba(243, 156, 18, 0.35); /* Sombra de acento */
            outline: none;
        }

    /* Estilo para las etiquetas (labels) */
    .control-label {
        font-weight: 600;
        color: var(--color-texto);
        margin-bottom: 8px;
        display: block;
    }

    /* Input Group para Presupuesto */
    .input-group-text {
        background-color: var(--color-fondo-claro);
        border: 1px solid #bdc3c7;
        border-right: none;
        border-radius: 6px 0 0 6px;
        color: var(--color-texto);
        font-weight: 600;
    }

    /* Corrección de borde para input dentro de input-group */
    .input-group .form-control {
        border-left: none;
        border-radius: 0 6px 6px 0;
    }

    /* Botones de Acción */
    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #4b6279;
            border-color: #4b6279;
        }

    .btn-secondary {
        background-color: #ecf0f1;
        border-color: #bdc3c7;
        color: var(--color-texto);
        font-weight: 600;
    }

        .btn-secondary:hover {
            background-color: #cfd6d8;
            border-color: #aeb5b7;
            color: var(--color-texto);
        }

    /* Contenedor de botones y acciones */
    .form-actions {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #dfe6e8;
    }

    /* Mensajes de validación */
    .text-danger {
        font-size: 0.8rem;
        font-style: italic;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="form-container">
    <h1><i class="fas fa-drafting-compass"></i> Agregar Nuevo Proyecto</h1>
    <h4>Define la planificación y el presupuesto para esta nueva iniciativa.</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                <!-- Bloque 1: Nombre (Full Width) -->
                <div class="form-group mb-4">
                    <label asp-for="Nombre" class="control-label">Nombre del Proyecto</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Construcción de Centro Comunitario Norte" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Bloque 2: Descripción (Full Width) -->
                <div class="form-group mb-5">
                    <label asp-for="Descripcion" class="control-label">Descripción y Alcance</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="5" placeholder="Detalles, objetivos principales, beneficios esperados y alcance geográfico del proyecto..."></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Bloque 3: Fechas (2 Columnas) -->
                <h5 class="text-muted mb-3">Cronograma</h5>
                <div class="row g-4 mb-4">

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Fecha_Inicio" class="control-label">Fecha de Inicio Estimada</label>
                            <input asp-for="Fecha_Inicio" class="form-control" type="date" />
                            <span asp-validation-for="Fecha_Inicio" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Fecha_Fin" class="control-label">Fecha de Finalización Estimada</label>
                            <input asp-for="Fecha_Fin" class="form-control" type="date" />
                            <span asp-validation-for="Fecha_Fin" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Bloque 4: Presupuesto y Estado (2 Columnas) -->
                <h5 class="text-muted mb-3">Finanzas y Estatus</h5>
                <div class="row g-4 mb-4">

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Presupuesto" class="control-label">Presupuesto Destinado</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                <input asp-for="Presupuesto" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Presupuesto" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Estado" class="control-label">Estado Actual del Proyecto</label>
                            <select asp-for="Estado" class="form-control form-select">
                                <option value="">-- Seleccionar Estado --</option>
                                <option value="planificado">Planificado</option>
                                <option value="en_ejecucion">En Ejecución</option>
                                <option value="finalizado">Finalizado</option>
                                <option value="cancelado">Cancelado</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Bloque 5: Municipio (Centrado) -->
                <div class="row justify-content-center">
                    <div class="col-12 col-md-6">
                        <div class="form-group mb-5">
                            <label asp-for="MunicipioId" class="control-label">Municipio Responsable/Impactado</label>
                            <select asp-for="MunicipioId" class="form-control form-select" asp-items="ViewBag.MunicipioId">
                                <option value="">-- Seleccionar Municipio --</option>
                            </select>
                            <span asp-validation-for="MunicipioId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Bloque de Acciones: Alineados a la derecha -->
                <div class="form-group form-actions d-flex justify-content-end gap-3">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancelar</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Crear Proyecto</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="text-decoration-none text-muted"><i class="fas fa-arrow-left"></i> Volver a la Lista de Proyectos</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}