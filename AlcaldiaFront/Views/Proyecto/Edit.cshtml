@model AlcaldiaFront.DTOs.ProyectoDTOs.ProyectoActualizarDTo
@{
    ViewData["Title"] = "Editar Proyecto";
}

<!-- Se requiere Bootstrap y Font Awesome para los iconos y el grid layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">

<style>
    /* --------------------------------------------------
           PATRÓN DE COLORES FORMAL ADAPTADO (Edición)
           -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita - Principal */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-texto: #2c3e50;
        --color-bg-light: #f4f6f9; /* Fondo muy claro para el body/ambiente */
    }

    body {
        background-color: var(--color-bg-light);
        font-family: 'Inter', sans-serif;
        padding: 20px;
    }

    /* Contenedor principal del formulario (Tarjeta de Edición) */
    .form-container {
        background-color: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        margin-top: 20px;
        margin-bottom: 30px;
    }

    /* Encabezado y subencabezado */
    .header-section {
        border-bottom: 2px solid var(--color-secundario);
        padding-bottom: 15px;
        margin-bottom: 30px;
    }

    h1 {
        color: var(--color-primario);
        margin-bottom: 5px;
        font-weight: 700;
        display: flex;
        align-items: center;
    }

        h1 i {
            font-size: 1.5rem;
            color: var(--color-secundario);
            margin-right: 15px;
        }

    h4 {
        color: #7f8c8d;
        font-size: 1.1rem;
    }

    /* Agrupamiento de campos (para distribución) */
    .form-section-title {
        color: var(--color-primario);
        font-weight: 700;
        margin-top: 25px;
        margin-bottom: 15px;
        font-size: 1.2rem;
        border-left: 4px solid var(--color-secundario);
        padding-left: 10px;
    }

    /* Estilo de los campos de formulario */
    .form-control, .form-select {
        border: 1px solid #bdc3c7;
        border-radius: 8px;
        padding: 12px;
        transition: border-color 0.3s, box-shadow 0.3s;
        width: 100%;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--color-secundario);
            box-shadow: 0 0 0 0.25rem rgba(243, 156, 18, 0.25);
        }

    /* Estilo para las etiquetas (labels) */
    .control-label {
        font-weight: 600;
        color: var(--color-texto);
        margin-bottom: 8px;
        display: block;
        font-size: 0.95rem;
    }

    /* Contenedor para manejar las dos columnas */
    .data-grid {
        margin-bottom: 20px;
    }

    /* Input Group para el presupuesto */
    .input-group-text {
        background-color: var(--color-primario);
        color: white;
        border-color: var(--color-primario);
        border-top-left-radius: 8px;
        border-bottom-left-radius: 8px;
        font-weight: 700;
    }

    /* Botones de Acción */
    .form-actions {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #ecf0f1;
        display: flex;
        gap: 15px;
        justify-content: flex-end;
    }

    .btn-action {
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        min-width: 160px;
    }

    /* Botón Guardar (Primario) */
    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
    }

        .btn-primary:hover {
            background-color: #4b6279;
            border-color: #4b6279;
            transform: translateY(-1px);
        }

    /* Botón Cancelar (Secundario) */
    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-texto);
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            border-color: #95a5a6;
            color: white;
            transform: translateY(-1px);
        }

    /* Mensajes de validación */
    .text-danger {
        font-size: 0.8rem;
        font-style: italic;
    }

    /* Enlace de volver a la lista */
    .back-link {
        font-weight: 600;
        color: var(--color-primario);
        text-decoration: none;
        display: block;
        margin-top: 20px;
        transition: color 0.2s;
    }

        .back-link:hover {
            color: var(--color-secundario);
            text-decoration: underline;
        }

    /* --------------------------------------------------
           ADAPTACIÓN RESPONSIVE
           -------------------------------------------------- */
    @@media (max-width: 767.98px) {
        .form-container {
            padding: 20px;
            margin-top: 0;
            border-radius: 0;
            box-shadow: none;
        }

        .col-md-6, .col-md-4 { /* Asegura que todas las columnas se apilen */
            width: 100%;
            margin-bottom: 20px;
        }

        .form-actions {
            flex-direction: column;
            gap: 10px;
            justify-content: center;
        }

        .btn-action {
            width: 100%;
        }

        .back-link {
            text-align: center;
            margin-top: 30px;
        }

        .input-group .form-control {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <!-- Contenedor centralizado y responsivo -->
        <div class="col-lg-8 col-md-10 col-12">
            <div class="form-container">

                <div class="header-section">
                    <h1><i class="fas fa-edit"></i> Editar Proyecto</h1>
                    <h4>Actualización de Metas y Parámetros</h4>
                </div>

                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id_Proyecto" />

                    <!-- SECCIÓN 1: Datos Generales -->
                    <h5 class="form-section-title">Información Principal</h5>

                    <!-- Nombre del Proyecto (Full Width) -->
                    <div class="mb-4">
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label">Nombre del Proyecto</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Construcción de Puente Peatonal Sur" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Descripción (Full Width - Textarea) -->
                    <div class="mb-4">
                        <div class="form-group">
                            <label asp-for="Descripcion" class="control-label">Descripción Detallada</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Detalles, objetivos y alcance del proyecto..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- SECCIÓN 2: Tiempos de Ejecución -->
                    <h5 class="form-section-title">Plazos de Ejecución</h5>
                    <div class="row data-grid">

                        <!-- Fecha de Inicio -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                <label asp-for="Fecha_Inicio" class="control-label">Fecha de Inicio</label>
                                <input asp-for="Fecha_Inicio" class="form-control" type="date" />
                                <span asp-validation-for="Fecha_Inicio" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Fecha de Finalización -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                <label asp-for="Fecha_Fin" class="control-label">Fecha de Finalización</label>
                                <input asp-for="Fecha_Fin" class="form-control" type="date" />
                                <span asp-validation-for="Fecha_Fin" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- SECCIÓN 3: Presupuesto y Clasificación -->
                    <h5 class="form-section-title">Finanzas y Clasificación</h5>
                    <div class="row data-grid">

                        <!-- Presupuesto -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                <label asp-for="Presupuesto" class="control-label">Presupuesto Destinado</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Presupuesto" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Presupuesto" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Estado Actual -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                <label asp-for="Estado" class="control-label">Estado Actual</label>
                                <select asp-for="Estado" class="form-select">
                                    <option value="">-- Seleccionar Estado --</option>
                                    <option value="planificado">Planificado</option>
                                    <option value="en_ejecucion">En Ejecución</option>
                                    <option value="finalizado">Finalizado</option>
                                    <option value="cancelado">Cancelado</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Municipio -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                <label asp-for="MunicipioId" class="control-label">Municipio de Ejecución</label>
                                <select asp-for="MunicipioId" class="form-select" asp-items="ViewBag.MunicipioId">
                                    <option value="">-- Seleccionar Municipio --</option>
                                </select>
                                <span asp-validation-for="MunicipioId" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <!-- SECCIÓN 4: Botones de Acción -->
                    <div class="form-group form-actions">
                        <a asp-action="Index" class="btn btn-secondary btn-action"><i class="fas fa-times-circle me-2"></i> Cancelar</a>
                        <button type="submit" class="btn btn-primary btn-action"><i class="fas fa-save me-2"></i> Guardar Cambios</button>
                    </div>
                </form>
            </div>

            <!-- Enlace Volver a la Lista -->
            <a asp-action="Index" class="back-link">
                <i class="fas fa-arrow-left me-2"></i> Volver a la Lista
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}