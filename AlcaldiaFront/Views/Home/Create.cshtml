@model AlcaldiaFront.DTOs.QuejaDTOs.QuejaCrearDTO
@{
    ViewData["Title"] = "Crear Reporte";
}

<!--
    ESTILOS CSS: Patrón de colores formal (Antracita/Dorado) y estilos responsivos
    basados en la plantilla anterior, adaptados para la vista de Reportes.
-->
<style>
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-fondo-claro: #ecf0f1;
        --color-texto: #2c3e50;
    }

    /* Contenedor principal del formulario (Tarjeta centralizada) */
    .form-container {
        background-color: white;
        padding: 30px;
        border-radius: 12px; /* Ligeramente más redondeado */
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15); /* Sombra más profunda */
        margin-top: 20px;
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        border-left: 6px solid var(--color-secundario);
        padding-left: 15px;
        margin-bottom: 25px;
        font-weight: 700; /* Más audaz */
        display: flex;
        align-items: center;
        gap: 10px;
    }

    h4 {
        color: #7f8c8d;
        font-weight: 400;
        margin-bottom: 20px;
    }

    /* Estilo de los campos de formulario */
    .form-control, .form-select {
        border: 1px solid #bdc3c7;
        border-radius: 6px; /* Bordes redondeados */
        padding: 10px 12px;
        transition: border-color 0.3s, box-shadow 0.3s;
        width: 100%; /* Asegura full width en columnas */
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--color-secundario);
            box-shadow: 0 0 0 0.25rem rgba(243, 156, 18, 0.35); /* Sombra de acento */
            outline: none;
        }

    /* Estilo para las etiquetas (labels) */
    .control-label {
        font-weight: 600;
        color: var(--color-texto);
        margin-bottom: 8px; /* Más espacio */
        display: block;
    }

    /* Botones de Acción */
    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #4b6279;
            border-color: #4b6279;
        }

    .btn-secondary {
        background-color: #ecf0f1; /* Fondo claro */
        border-color: #bdc3c7;
        color: var(--color-texto);
        font-weight: 600;
    }

        .btn-secondary:hover {
            background-color: #cfd6d8;
            border-color: #aeb5b7;
            color: var(--color-texto);
        }

    /* Contenedor de botones y acciones */
    .form-actions {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #dfe6e8; /* Línea separadora sutil */
    }

    /* Mensajes de validación */
    .text-danger {
        font-size: 0.8rem;
        font-style: italic;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="form-container">
    <h1><i class="fas fa-exclamation-triangle"></i> Nuevo Reporte Ciudadano (Queja)</h1>
    <h4>Proporciona los detalles para registrar un problema en el municipio.</h4>
    <hr />

    <div class="row justify-content-center">
        <!-- El formulario ocupará 10 columnas en pantallas grandes y el 100% en pequeñas -->
        <div class="col-12 col-lg-10">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                <!-- Bloque 1: Título (Full Width - Col-12) -->
                <div class="form-group mb-4">
                    <label asp-for="Titulo" class="control-label">Título del Reporte</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ej: Daño grave en calle principal, Falta de iluminación" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <!-- Bloque 2: Descripción (Full Width - Col-12) -->
                <div class="form-group mb-5">
                    <label asp-for="Descripcion" class="control-label">Descripción Detallada</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="5" placeholder="Detalles específicos del problema, ubicación exacta y personas afectadas..."></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Bloque 3: Distribución en 2 Columnas (2x2 Grid para 4 campos) -->
                <div class="row g-4 mb-4">

                    <!-- Fila 1, Columna 1: Fecha de Registro -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Fecha_Registro" class="control-label">Fecha de Registro</label>
                            <input asp-for="Fecha_Registro" class="form-control" type="date" />
                            <span asp-validation-for="Fecha_Registro" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Fila 1, Columna 2: Tipo de Reporte -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Tipo" class="control-label">Tipo de Reporte</label>
                            <select asp-for="Tipo" class="form-control form-select">
                                <option value="">-- Seleccionar Tipo --</option>
                                <option value="desechos">Recolección de desechos</option>
                                <option value="contaminacion">Contaminación ambiental</option>
                                <option value="seguridad">Seguridad pública</option>
                                <option value="infraestructura">Infraestructura pública</option>
                                <option value="otro">Otro</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-4">

                    <!-- Fila 2, Columna 1: Nivel de Reporte -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Nivel" class="control-label">Nivel de Urgencia</label>
                            <select asp-for="Nivel" class="form-control form-select">
                                <option value="">-- Seleccionar Nivel --</option>
                                <option value="bajo">Bajo (Mejora)</option>
                                <option value="medio">Medio (Atención necesaria)</option>
                                <option value="alto">Alto (Riesgo potencial)</option>
                                <option value="riesgo">Riesgo Inminente</option>
                            </select>
                            <span asp-validation-for="Nivel" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Fila 2, Columna 2: Municipio -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MunicipioId" class="control-label">Municipio Afectado</label>
                            <!-- Se asume que ViewBag.MunicipioId es un SelectList -->
                            <select asp-for="MunicipioId" class="form-control form-select" asp-items="ViewBag.MunicipioId">
                                <option value="">-- Seleccionar Municipio --</option>
                            </select>
                            <span asp-validation-for="MunicipioId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Bloque de Acciones: Alineados a la derecha y con espacio -->
                <div class="form-group form-actions d-flex justify-content-end gap-3">
                    <!-- Se mantiene la referencia a Home/Index según el código original, pero lo ideal es asp-action="Index" -->
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancelar</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Registrar Reporte</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="text-decoration-none text-muted"><i class="fas fa-arrow-left"></i> Volver a la Lista de Reportes</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
