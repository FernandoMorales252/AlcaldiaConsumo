@{
    ViewData["Title"] = "Inicio - Alcaldía Municipal";
}

<style>
    /* --------------------------------------------------
           PALETA DE COLORES ACTUALIZADA (Del _Layout)
           -------------------------------------------------- */
    :root {
        --color-primario: #0A3A58; /* Azul Profundo */
        --color-acento: #FFC300; /* Amarillo Dorado */
        --color-secundario: #0077B6; /* Azul Claro/Cian */
        --color-fondo: #F8F9FA;
        --color-texto: #343A40;
    }

    /* 1. Estilo del Hero Section Mejorado */
    .hero-formal {
        background: linear-gradient(rgba(10, 58, 88, 0.9), rgba(10, 58, 88, 0.7)), url('/css/Es.jpg') no-repeat center center/cover;
        color: white;
        padding: 8rem 0;
        text-align: center;
        margin-bottom: 0;
        position: relative;
    }

        .hero-formal h1 {
            font-size: clamp(2.5rem, 5vw, 4.5rem); /* Tamaño de fuente fluido */
            font-weight: 900;
            margin-bottom: 1.5rem;
            /* Linea inferior con degradado */
            border-bottom: 5px solid var(--color-acento);
            display: inline-block;
            padding-bottom: 0.75rem;
        }

        .hero-formal p {
            font-size: clamp(1rem, 2vw, 1.5rem);
            max-width: 900px;
            margin: 0 auto 3rem;
            opacity: 0.95;
        }

        .hero-formal .btn-lg {
            padding: 1rem 2.5rem;
            font-size: 1.25rem;
            border-radius: 10px;
            font-weight: bold;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .hero-formal .btn-lg:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 195, 0, 0.4);
            }

    /* 2. Barra de Acceso Rápido (Cards Modernas) */
    .quick-access-bar {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); /* Min ancho 200px */
        gap: 2rem;
        max-width: 1300px;
        margin: -6rem auto 4rem; /* Subida de 6rem */
        padding: 0 2rem;
        position: relative; /* Asegura que esté por encima del hero */
        z-index: 10;
    }

        .quick-access-bar a {
            background: white;
            padding: 2.5rem 1.5rem;
            border-radius: 12px; /* Más redondeado */
            text-align: center;
            text-decoration: none;
            color: var(--color-texto);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1); /* Sombra más profunda */
            transition: transform 0.3s, box-shadow 0.3s, border-color 0.3s;
            border-bottom: 5px solid var(--color-secundario); /* Borde inferior sutil */
        }

            .quick-access-bar a:hover {
                transform: translateY(-8px); /* Elevación más notable */
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
                color: var(--color-primario);
                border-bottom-color: var(--color-acento); /* Cambio de color al hacer hover */
            }

        .quick-access-bar i {
            font-size: 2.5rem;
            color: var(--color-acento); /* Iconos en color Dorado */
            margin-bottom: 0.5rem;
            display: block;
            transition: color 0.3s;
        }

        .quick-access-bar a:hover i {
            color: var(--color-primario); /* Iconos cambian a Azul Profundo al hacer hover */
        }

    /* 3. Estilo de la Sección de Noticias (Responsive) */
    .news-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 3rem;
        max-width: 1300px;
        margin: 0 auto;
        padding: 2rem 2rem;
    }

    .news-list h2, .news-list hr {
        border-color: rgba(0, 0, 0, 0.1) !important;
    }

    .news-item {
        border-left: 4px solid var(--color-acento);
        padding-left: 1.5rem;
        transition: background-color 0.2s;
        margin-bottom: 1.5rem !important;
    }

        .news-item:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }

        .news-item h4 a {
            color: var(--color-primario);
            text-decoration: none;
            font-weight: 600;
        }

            .news-item h4 a:hover {
                text-decoration: underline;
            }

    /* 4. Anuncio Urgente (Diseño Impactante) */
    .urgent-announcement {
        background: var(--color-primario);
        color: white;
        padding: 2.5rem;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(10, 58, 88, 0.4);
        border: 1px solid var(--color-acento);
    }

        .urgent-announcement h3 {
            color: var(--color-acento);
            font-weight: 800;
            border-bottom: 2px solid rgba(255, 195, 0, 0.5);
            padding-bottom: 0.5rem;
        }

        .urgent-announcement a {
            font-weight: bold;
        }

    /* 5. Transparencia en Cifras (Dashboard Cards) */
    .transparency-card {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border: 1px solid #E0E0E0;
        transition: transform 0.3s;
    }

        .transparency-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .transparency-card .display-4 {
            font-size: clamp(2.5rem, 6vw, 4rem);
            font-weight: 900;
            margin-bottom: 0.5rem;
        }

    /* Colores temáticos para las cifras */
    .text-primary-figure {
        color: var(--color-primario) !important;
    }

    .text-success-figure {
        color: #28A745 !important;
    }
    /* Verde para éxito/culminado */
    .text-warning-figure {
        color: var(--color-acento) !important;
    }

    /* MEDIA QUERIES para Responsividad */
    @@media (max-width: 992px) {
        /* Tablet: Cambiamos News Grid a una sola columna */
        .news-grid

    {
        grid-template-columns: 1fr;
        gap: 2rem;
        padding: 2rem 1rem;
    }

    .quick-access-bar {
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        margin: -4rem auto 2rem;
        gap: 1rem;
        padding: 0 1rem;
    }

    .hero-formal {
        padding: 6rem 0;
    }

    }

    @@media (max-width: 576px) {
        /* Móvil: Ajustes finos */
        .hero-formal

    {
        padding: 4rem 0;
    }

    .quick-access-bar {
        grid-template-columns: 1fr; /* Una tarjeta por fila para mejor usabilidad */
        gap: 0.75rem;
    }

        .quick-access-bar a {
            padding: 1.5rem 1rem;
            text-align: left;
            display: flex;
            align-items: center;
        }

        .quick-access-bar i {
            margin-bottom: 0;
            margin-right: 1rem;
        }

    .transparency-card {
        margin-bottom: 1.5rem;
    }

        .transparency-card .lead {
            font-size: 1rem;
        }

    }
</style>

<div class="main-content">

    <!-- HERO SECTION -->
    <section class="hero-formal">
        <h1>Alcaldía Municipal de ES</h1>
        <p>Trabajando por la Prosperidad. Gobernando con Transparencia, Innovación y Servicio al Ciudadano.</p>
        <a href="/" class="btn btn-warning btn-lg">
            <i class="fas fa-file-contract"></i> Portal de Trámites en Línea
        </a>
    </section>

    <!-- QUICK ACCESS BAR (SUPERPUESTA) -->
    <section class="quick-access-bar">
        <a asp-controller="Home" asp-action="History">
            <i class="fas fa-landmark"></i> Historia y Misión
        </a>
        <a asp-controller="Home" asp-action="Create">
            <i class="fas fa-calendar-check"></i> Crear Reporte
        </a>
        <a asp-controller="Queja" asp-action="Menu">
            <i class="fas fa-bullhorn"></i> Lista de Reportes
        </a>
        <a asp-controller="Aviso" asp-action="Menu">
            <i class="fas fa-gavel"></i> Lista de Avisos
        </a>
        <a asp-controller="Home" asp-action="Contacto">
            <i class="fas fa-headset"></i> Contáctanos
        </a>
    </section>

    <!-- MAIN CONTENT GRID (NOTICIAS Y ANUNCIOS) -->
    <div class="container mt-5">
        <section class="news-grid">
            <div class="news-list">
                <h2 class="text-primary" style="font-weight:700;">Últimas Noticias Oficiales</h2>
                <hr />
                <!-- Item 1: Repositorio Frontend -->
                <div class="news-item mb-3">
                    <small class="text-muted"><i class="far fa-calendar-alt"></i> 25 de Septiembre de 2025</small>
                    <h4><a href="https://github.com/FernandoMorales252/AlcaldiaConsumo"><i class="fab fa-github me-1"></i> Nuestro Repositorio Git Frontend</a></h4>
                    <p>Nuestro equipo se involucró en la parte del frontend para el consumo de la API, usando tecnologías modernas y enfocándose en la experiencia de usuario. ¡Más detalles en el repositorio!</p>
                </div>
                <!-- Item 2: Repositorio Backend -->
                <div class="news-item mb-3">
                    <small class="text-muted"><i class="far fa-calendar-alt"></i> 20 de Septiembre de 2025</small>
                    <h4><a href="https://github.com/FernandoMorales252/Alcaldia-sys"><i class="fab fa-github me-1"></i> Nuestro Repositorio Git Backend</a></h4>
                    <p>El equipo desarrolló una API robusta y escalable para la gestión de los datos municipales. Revise la estructura y la documentación técnica aquí.</p>
                </div>
                <!-- Item 3: Becas -->
                <div class="news-item mb-3">
                    <small class="text-muted"><i class="far fa-calendar-alt"></i> 15 de Septiembre de 2025</small>
                    <h4><a href="https://portal.esco.gob.sv/es-ES/0/PUB/Home/Becas_Show?nav=YMJm1Wp6&niv=1"><i class="fas fa-graduation-cap me-1"></i> Programa de Becas Internacionales 2025</a></h4>
                    <p>Conoce oportunidades de estudio en el extranjero. El gobierno municipal apoya el desarrollo académico. ¡Puedes ser parte de esto! Haz clic para ver los requisitos.</p>
                </div>
            </div>

            <!-- URGENT ANNOUNCEMENT (STICKY CARD) -->
            <div>
                <div class="urgent-announcement sticky-top" style="top: 20px;">
                    @{
                        
                        var aviso = ViewData["AvisoReciente"] as AlcaldiaFront.DTOs.AvisoDTOs.AvisoRespuestaDTO;
                    }

                    @if (aviso != null)
                    {
                        
                        <h3> @Html.DisplayFor(model => aviso.Titulo)</h3>
                        <hr style="border-color: rgba(255,255,255,0.3);" />

                        <h4 class="text-warning">@Html.DisplayFor(model => aviso.Tipo)</h4>
                        <p>
                            <strong>Fecha:</strong> @aviso.Fecha_Registro.ToString("dd MMM yyyy")
                        </p>
                        <p style="opacity:0.9;">
                            @(aviso.Descripcion.Length > 150 ? aviso.Descripcion.Substring(0, 150) + "..." : aviso.Descripcion)
                        </p>
                        <p class="text-end mt-4">
                            <a asp-controller="Aviso" asp-action="Public" asp-route-id="@aviso.Id_aviso" class="text-warning">
                                Leer Aviso Completo <i class="fas fa-arrow-right"></i>
                            </a>
                        </p>
                    }
                    else
                    {
                        <h3>Sin Avisos Urgentes</h3>
                        <hr style="border-color: rgba(255,255,255,0.3);" />
                        <p>La Alcaldía no ha emitido avisos urgentes o de interés público recientemente. Consulte el archivo de noticias para más información.</p>
                        <p class="text-end mt-4">
                            <a href="/ArchivoAvisos" class="text-warning">Ver Archivo de Avisos <i class="fas fa-archive"></i></a>
                        </p>
                    }
                </div>
            </div>
        </section>
    </div>

    <!-- TRANSPARENCIA EN CIFRAS (DASHBOARD) -->
    <section class="bg-light py-5 mt-5">
        <div class="container text-center">
            <h2 class="text-primary" style="font-weight:700; margin-bottom: 2rem;">Transparencia en Cifras</h2>
            <div class="row mt-4">

                <!-- Card 1: Presupuesto Total -->
                <div class="col-md-4 mb-4">
                    <div class="transparency-card">
                        <h3 class="display-4 text-primary-figure">
                            <i class="fas fa-chart-line"></i>
                        </h3>
                        <div class="display-5 text-primary-figure" style="font-weight: 900;">
                            @(ViewData["PresupuestoTotalFormato"] ?? "$0.00")
                        </div>
                        <p class="lead mt-3">Presupuesto Total de Proyectos Asignado</p>
                    </div>
                </div>

                <!-- Card 2: Proyectos Culminados -->
                <div class="col-md-4 mb-4">
                    <div class="transparency-card">
                        <h3 class="display-4 text-success-figure">
                            <i class="fas fa-check-circle"></i>
                        </h3>
                        <div class="display-5 text-success-figure" style="font-weight: 900;">
                            @(ViewData["ProyectosCulminados"] ?? 0)
                        </div>
                        <p class="lead mt-3">Proyectos de Infraestructura Culminados</p>
                    </div>
                </div>

                <!-- Card 3: Presupuesto en Ejecución -->
                <div class="col-md-4 mb-4">
                    <div class="transparency-card">
                        <h3 class="display-4 text-warning-figure">
                            <i class="fas fa-hand-holding-usd"></i>
                        </h3>
                        <div class="display-5 text-warning-figure" style="font-weight: 900;">
                            @(ViewData["PresupuestoEjecucionFormato"] ?? "$0.00")
                        </div>
                        <p class="lead mt-3">Presupuesto Actual en Ejecución</p>
                    </div>
                </div>

            </div>

            <a asp-controller="Proyecto" asp-action="Menu" class="btn btn-primary mt-4 btn-lg" style="background-color: var(--color-primario); border-color: var(--color-primario);">
                <i class="fas fa-external-link-alt"></i> Visitar Portal de Proyectos
            </a>
        </div>
    </section>


</div>