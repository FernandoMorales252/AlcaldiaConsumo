@model IEnumerable<AlcaldiaFront.DTOs.CargoDTOs.CargoRespuestaDTo>
@using System.Collections.Generic

@{
    ViewData["Title"] = "Listado de Cargos";
    int pageSize = 5; // Define cuántos elementos quieres por página
}

@* Incluimos Font Awesome para los iconos *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    /* --------------------------------------------------
               PATRÓN DE COLORES FORMAL ADAPTADO (Antracita/Dorado)
               -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-fondo-claro: #ecf0f1;
        --color-texto: #2c3e50;
        --color-danger: #e74c3c;
        --color-info: #3498db;
    }

    /* Contenedor principal - Tarjeta elevada */
    .data-card {
        background-color: white;
        padding: 30px;
        border-radius: 12px; /* Más redondeado */
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15); /* Sombra más profunda */
        margin-top: 30px;
        margin-bottom: 30px;
    }

    /* Encabezado principal dinámico */
    .page-title {
        color: var(--color-primario);
        font-weight: 800;
        font-size: 2.5rem;
        margin-bottom: 25px;
        position: relative;
        padding-bottom: 15px;
    }
        /* Línea de acento debajo del título */
        .page-title::after {
            content: '';
            display: block;
            width: 80px;
            height: 4px;
            background-color: var(--color-secundario);
            position: absolute;
            bottom: 0;
            left: 0;
            border-radius: 2px;
        }

    /* Botón Crear Nuevo */
    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
        transition: transform 0.2s, box-shadow 0.2s;
        font-weight: 600;
        border-radius: 6px;
    }

        .btn-primary:hover {
            background-color: #4b6279;
            border-color: #4b6279;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

    /* Estilo de la tabla */
    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: var(--color-fondo-claro);
    }

    .table thead th {
        background-color: var(--color-primario);
        color: white;
        border-bottom: 4px solid var(--color-secundario); /* Borde más grueso */
        font-weight: 600;
        vertical-align: middle;
        text-align: center;
    }
        /* Aseguramos que los encabezados de texto queden a la izquierda por defecto */
        .table thead th:first-child, .table thead th:nth-child(2) {
            text-align: left;
        }

    .table tbody td {
        vertical-align: middle;
        font-size: 0.95rem;
    }
        /* Alineación del nombre (primera columna) */
        .table tbody td:first-child {
            text-align: left;
            font-weight: 500;
            color: var(--color-texto);
        }

    /* Estilos para los botones de acción en la tabla */
    .action-buttons {
        white-space: nowrap; /* Evita saltos de línea */
        padding-top: 10px;
        padding-bottom: 10px;
    }
        /* Botones de acción individuales */
        .action-buttons a {
            margin: 0 2px;
            border-radius: 4px;
            padding: 5px 8px;
            transition: background-color 0.2s, color 0.2s;
        }

    /* Estilos para los botones de la paginación */
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

    .page-item .page-link {
        color: var(--color-primario);
        border-color: var(--color-primario);
        border-radius: 4px;
        margin: 0 2px;
    }

    .page-item.active .page-link {
        background-color: var(--color-secundario);
        border-color: var(--color-secundario);
        color: white;
        font-weight: bold;
    }

    /* Estilos de las Alertas */
    .alert-danger {
        border-left: 5px solid var(--color-danger);
        color: var(--color-danger);
        background-color: #fceae9;
    }

    .alert-success {
        border-left: 5px solid #27ae60;
        color: #27ae60;
        background-color: #eaf7ee;
    }

    .alert-info {
        border-left: 5px solid var(--color-info);
    }

    /* ==================================
           MEDIA QUERIES - RESPONSIVE DESIGN
           ================================== */

    /* Móvil Pequeño y Tablet Vertical */
    @@media (max-width: 768px) 
    {
        .data-card
        {
        padding: 15px;
        margin-top: 15px;
    }
    

    .page-title {
        font-size: 2rem;
    }

    /* Hacemos que la tabla sea horizontalmente deslizable si es necesario */
    .table-responsive {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    /* Aseguramos que la columna de acciones no sea demasiado ancha */
    .table thead th:last-child, .table tbody td:last-child {
        width: 150px;
        min-width: 150px;
    }

    /* Agrupación de botones en móvil para evitar desborde */
    .action-buttons .btn-group {
        display: flex; /* Forzar flexbox para que se agrupen */
        flex-wrap: nowrap;
        margin: 5px 0;
        justify-content: center;
    }

        .action-buttons .btn-group a {
            flex-grow: 1; /* Distribuye el espacio entre botones */
            margin: 0 1px;
        }

    /* Ocultar la descripción en móvil para no desbordar la tabla, o darle un width mínimo */
    .table thead th:nth-child(2),
    .table tbody td:nth-child(2) {
        /* La descripción es la segunda columna */
        min-width: 180px; /* Asegura que la descripción tenga un espacio mínimo, pero si hay desborde, el table-responsive lo maneja */
    }
 }

    
</style>

<div class="container">
    <div class="data-card">

        <h1 class="page-title"><i class="fas fa-briefcase me-2"></i> @ViewData["Title"]</h1>
        <div class="mb-4">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus-circle me-1"></i> Crear Nuevo Cargo</a>
        </div>

        @* --- Manejo de Alertas (TempData y ViewBag) --- *@
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> <strong>Error:</strong> @TempData["ErrorMessage"]
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                <i class="fas fa-check-circle me-2"></i> <strong>Éxito:</strong> @TempData["SuccessMessage"]
            </div>
        }
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-times-circle me-2"></i> @ViewBag.Error
            </div>
        }

        <div class="table-responsive">
            <table class="table table-hover table-striped" id="cargosTable">
                <thead>
                    <tr>
                        <th class="text-left"><i class="fas fa-id-badge me-1"></i> Nombre</th>
                        <th class="text-left"><i class="fas fa-align-left me-1"></i> Descripción</th>
                        <th class="text-center" style="width: 150px;"><i class="fas fa-cog me-1"></i> Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nombre_cargo)</td>
                                <td>
                                    @* Mantenemos la lógica de truncar la descripción *@
                                    @if (!string.IsNullOrEmpty(item.Descripcion) && item.Descripcion.Length > 80)
                                    {
                                        @(item.Descripcion.Substring(0, 80) + "...")
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    }
                                </td>
                                <td class="text-center action-buttons">
                                    <div class="btn-group" role="group" aria-label="Acciones de Cargo">
                                        <a asp-action="Edit" asp-route-id="@item.Id_Cargo" class="btn btn-sm btn-outline-primary" title="Editar"><i class="fas fa-edit"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id_Cargo" class="btn btn-sm btn-outline-info" title="Detalles"><i class="fas fa-info-circle"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id_Cargo" class="btn btn-sm btn-outline-danger" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <nav class="pagination-container" aria-label="Navegación de Cargos">
            <ul class="pagination" id="pagination-ul"></ul>
        </nav>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center mt-4 p-4" role="alert">
                <h4><i class="fas fa-clipboard-list me-2"></i> No hay cargos registrados</h4>
                <p class="mb-3">Comienza creando el primer cargo para tu organización.</p>
                <a asp-action="Create" class="btn btn-primary btn-lg">Crear Primer Cargo</a>
            </div>
        }

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Configuración de Paginación
            const table = document.getElementById('cargosTable');
            const tbody = table ? table.querySelector('tbody') : null;
            // Si Model es nulo o vacío, rows será vacío y se mostrará el mensaje de "No hay cargos registrados"
            const rows = tbody ? Array.from(tbody.querySelectorAll('tr')) : [];
            const pageSize = @pageSize; // Viene de la variable Razor
            const totalPages = Math.ceil(rows.length / pageSize);
            const paginationUl = $('#pagination-ul');

            function displayPage(page) {
                const startIndex = (page - 1) * pageSize;
                const endIndex = startIndex + pageSize;

                rows.forEach((row, index) => {
                    row.style.display = (index >= startIndex && index < endIndex) ? '' : 'none';
                });

                updatePaginationControls(page);
            }

            function updatePaginationControls(currentPage) {
                paginationUl.empty(); // Limpiar la paginación existente

                if (totalPages <= 1) return; // No mostrar paginación si solo hay una página

                // Botón Anterior
                const prevDisabled = currentPage === 1 ? 'disabled' : '';
                paginationUl.append(`
                    <li class="page-item ${prevDisabled}">
                        <a class="page-link" href="#" data-page="${currentPage - 1}" aria-label="Anterior"><i class="fas fa-angle-left"></i></a>
                    </li>
                `);

                // Botones de Páginas Numeradas
                // Lógica simplificada para mostrar solo 5 páginas centradas alrededor de la actual
                let startPage = Math.max(1, currentPage - 2);
                let endPage = Math.min(totalPages, currentPage + 2);

                if (currentPage <= 3) {
                    endPage = Math.min(totalPages, 5);
                } else if (currentPage > totalPages - 2) {
                    startPage = Math.max(1, totalPages - 4);
                }


                for (let i = startPage; i <= endPage; i++) {
                    const active = i === currentPage ? 'active' : '';
                    paginationUl.append(`
                        <li class="page-item ${active}">
                            <a class="page-link" href="#" data-page="${i}">${i}</a>
                        </li>
                    `);
                }

                // Botón Siguiente
                const nextDisabled = currentPage === totalPages ? 'disabled' : '';
                paginationUl.append(`
                    <li class="page-item ${nextDisabled}">
                        <a class="page-link" href="#" data-page="${currentPage + 1}" aria-label="Siguiente"><i class="fas fa-angle-right"></i></a>
                    </li>
                `);
            }

            // Manejador de clic para los botones de paginación
            paginationUl.on('click', 'a.page-link', function (e) {
                e.preventDefault();
                // Si el elemento padre está deshabilitado, no hacer nada
                if ($(this).parent().hasClass('disabled')) return;

                const newPage = parseInt($(this).data('page'));

                if (!isNaN(newPage) && newPage >= 1 && newPage <= totalPages) {
                    displayPage(newPage);
                    // Desplazar la ventana hacia arriba para ver la tabla
                    $('html, body').animate({ scrollTop: $('.data-card').offset().top }, 300);
                }
            });

            // Inicializar la tabla y la paginación en la página 1
            if (rows.length > 0) {
                displayPage(1);
            }
        });
    </script>
}