@model AlcaldiaFront.DTOs.MunicipioDTOs.MunicipioActualizarDTO

@{
    ViewData["Title"] = "Editar Municipio";
}

@* Incluimos Font Awesome para los iconos *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    /* --------------------------------------------------
            PATRÓN DE COLORES FORMAL ADAPTADO (Edición)
            -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-texto: #2c3e50;
    }

    /* Contenedor principal del formulario (Tarjeta de Edición) */
    .form-container {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        border-left: 5px solid var(--color-secundario); /* Borde de acento lateral */
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        margin-bottom: 5px;
        font-weight: 600;
    }

    h4 {
        color: #7f8c8d;
    }

    /* Estilo de los campos de formulario */
    .form-control {
        border: 1px solid #bdc3c7;
        border-radius: 4px;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus {
            border-color: var(--color-secundario);
            box-shadow: 0 0 0 0.25rem rgba(243, 156, 18, 0.25); /* Sombra de acento */
        }

    /* Estilo para las etiquetas (labels) */
    .control-label {
        font-weight: 600;
        color: var(--color-texto);
        margin-bottom: 5px;
    }

    /* Botón Guardar (Primario) */
    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
        transition: background-color 0.3s;
        min-width: 120px;
    }

        .btn-primary:hover {
            background-color: #4b6279;
            border-color: #4b6279;
        }

    /* Botón Cancelar (Secundario) */
    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-texto);
        min-width: 120px;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            border-color: #95a5a6;
        }

    /* Contenedor de botones (para espaciado) */
    .form-actions {
        margin-top: 30px;
        padding-top: 15px;
        border-top: 1px solid #ecf0f1;
    }

    /* Mensajes de validación */
    .text-danger {
        font-size: 0.85rem;
        font-style: italic;
    }
</style>

<div class="form-container">
    <h1><i class="fas fa-city"></i> @ViewData["Title"]</h1>
    <h4>Actualización de Datos del Municipio</h4>
    <hr />

    <div class="row">
        @* Usamos col-md-6 para formularios simples, manteniendo responsive *@
        <div class="col-lg-6 col-md-8 col-sm-12">
            <form asp-action="Edit">
                @* Mensaje de resumen de validación *@
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                @* Campo oculto para el ID *@
                <input type="hidden" asp-for="Id_Municipio" />

                <div class="form-group mb-4">
                    <label asp-for="Nombre_Municipio" class="control-label"></label>
                    <input asp-for="Nombre_Municipio" class="form-control" />
                    <span asp-validation-for="Nombre_Municipio" class="text-danger"></span>
                </div>

                @* Contenedor para botones de acción *@
                <div class="form-group form-actions">
                    <button type="submit" class="btn btn-primary me-2"><i class="fas fa-save"></i> Guardar Cambios</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index"><i class="fas fa-arrow-left"></i> Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}