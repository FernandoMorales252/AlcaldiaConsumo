@model AlcaldiaFront.DTOs.TipoDocumentoDTOs.TipoDocCrearDTO

@{
    ViewData["Title"] = "Crear Tipo de Documento";
}

<style>
    /* Estilos globales (Antracita/Dorado) */
    :root {
        --color-primario: #34495e;
        --color-secundario: #f39c12;
        --color-texto: #2c3e50;
    }

    .form-container {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    h1 {
        color: var(--color-primario);
        border-left: 5px solid var(--color-secundario);
        padding-left: 15px;
        margin-bottom: 25px;
        font-weight: 600;
    }

    .control-label {
        font-weight: 600;
        color: var(--color-texto);
        margin-bottom: 5px;
    }

    .form-control:focus {
        border-color: var(--color-secundario);
        box-shadow: 0 0 0 0.25rem rgba(243, 156, 18, 0.25);
    }

    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
        min-width: 120px;
    }

    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-texto);
        min-width: 120px;
    }

    .form-actions {
        margin-top: 30px;
        padding-top: 15px;
        border-top: 1px solid #ecf0f1;
    }
</style>

<div class="form-container">
    <h1><i class="fas fa-file-contract"></i> Crear Tipo de Documento</h1>
    <h4>Definición de Categoría</h4>
    <hr />
    <div class="row">
        <div class="col-lg-6 col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre tipoDoc</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Contrato, Decreto, Acta, etc." />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group form-actions">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Crear</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index"><i class="fas fa-arrow-left"></i> Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}