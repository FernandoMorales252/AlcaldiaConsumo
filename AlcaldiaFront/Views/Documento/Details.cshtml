@model AlcaldiaFront.DTOs.DocumentoDTOs.DocumentoRespuestaDTO

@{
    ViewData["Title"] = "Detalles del Documento";
    string GetBadgeClass(string estado) => estado?.ToLower() switch
    {
        "activo" => "success",
        "inactivo" => "danger",
        "pendiente" => "warning",
        _ => "secondary"
    };
}

<style>
    /* Estilos globales (Antracita/Dorado) */
    :root {
        --color-primario: #34495e;
        --color-secundario: #f39c12;
    }

    .details-card {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        border-top: 5px solid var(--color-secundario);
    }

    h1 {
        color: var(--color-primario);
        font-weight: 600;
        margin-bottom: 5px;
    }

    .dl-detalle dt {
        color: var(--color-primario);
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.9rem;
        padding-top: 10px;
    }

    .dl-detalle dd {
        margin-bottom: 5px;
        border-bottom: 1px dashed #ecf0f1;
        padding-bottom: 5px;
    }

    .action-bar {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #ecf0f1;
    }
    /* Botones específicos de acciones */
    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
    }

    .btn-info {
        background-color: #3498db;
        border-color: #3498db;
    }

    .btn-danger {
        background-color: #c0392b;
        border-color: #c0392b;
    }

    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-primario);
    }
</style>

<div class="details-card">
    <h1><i class="fas fa-clipboard-list text-secondary"></i> Detalles del Documento</h1>
    <h4>Número de Documento: @Model.Numero_documento</h4>
    <hr />

    <dl class="row dl-detalle">
        <dt class="col-sm-4 col-md-3">
            <i class="fas fa-key"></i> @Html.DisplayNameFor(model => model.Id_documento)
        </dt>
        <dd class="col-sm-8 col-md-9">
            @Html.DisplayFor(model => model.Id_documento)
        </dd>

        <dt class="col-sm-4 col-md-3">
            <i class="fas fa-hashtag"></i> @Html.DisplayNameFor(model => model.Numero_documento)
        </dt>
        <dd class="col-sm-8 col-md-9">
            <h5>@Html.DisplayFor(model => model.Numero_documento)</h5>
        </dd>

        <dt class="col-sm-4 col-md-3">
            <i class="far fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.Fecha_emision)
        </dt>
        <dd class="col-sm-8 col-md-9">
            @Html.DisplayFor(model => model.Fecha_emision)
        </dd>

        <dt class="col-sm-4 col-md-3">
            <i class="fas fa-user-tag"></i> @Html.DisplayNameFor(model => model.Propietario)
        </dt>
        <dd class="col-sm-8 col-md-9">
            @Html.DisplayFor(model => model.Propietario)
        </dd>

        <dt class="col-sm-4 col-md-3">
            <i class="fas fa-info-circle"></i> @Html.DisplayNameFor(model => model.Detalles)
        </dt>
        <dd class="col-sm-8 col-md-9">
            @Html.DisplayFor(model => model.Detalles)
        </dd>

        <dt class="col-sm-4 col-md-3">
            <i class="fas fa-check-circle"></i> @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-8 col-md-9">
            @{
                string badgeClass = GetBadgeClass(Model?.Estado);
            }
            <span class="badge bg-@badgeClass badge-lg">
                @Html.DisplayFor(model => model.Estado)
            </span>
        </dd>

        <dt class="col-sm-4 col-md-3">
            <i class="fas fa-file-invoice"></i> Tipo Documento ID
        </dt>
        <dd class="col-sm-8 col-md-9">
            @Html.DisplayFor(model => model.TipoDocumentoId)
        </dd>

        <dt class="col-sm-4 col-md-3">
            <i class="fas fa-map-marker-alt"></i> Municipio ID
        </dt>
        <dd class="col-sm-8 col-md-9">
            @Html.DisplayFor(model => model.MunicipioId)
        </dd>
    </dl>
</div>

<div class="action-bar">
    <a asp-action="Edit" asp-route-id="@Model?.Id_documento" class="btn btn-primary"><i class="fas fa-edit"></i> Editar</a>
    <a asp-action="Delete" asp-route-id="@Model?.Id_documento" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Eliminar</a>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a la Lista</a>
</div>