@model AlcaldiaFront.DTOs.DocumentoDTOs.DocumentoActualizarDTO

@{
    ViewData["Title"] = "Editar Documento";
}

<!-- Se requiere Bootstrap y Font Awesome para los iconos y el grid layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">


<style>
    /* --------------------------------------------------
           PATRÓN DE COLORES FORMAL ADAPTADO (Edición)
           -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita - Principal */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-texto: #2c3e50;
        --color-bg-light: #f4f6f9; /* Fondo muy claro para el body/ambiente */
    }

    body {
        background-color: var(--color-bg-light);
        font-family: 'Inter', sans-serif;
        padding: 20px;
    }

    /* Contenedor principal del formulario (Tarjeta de Edición) */
    .form-container {
        background-color: white;
        padding: 40px;
        border-radius: 12px; /* Más redondeado */
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15); /* Sombra más profunda */
        margin-top: 20px;
        margin-bottom: 30px;
    }

    /* Encabezado y subencabezado */
    .header-section {
        border-bottom: 2px solid var(--color-secundario); /* Línea de acento bajo el título */
        padding-bottom: 15px;
        margin-bottom: 30px;
    }

    h1 {
        color: var(--color-primario);
        margin-bottom: 5px;
        font-weight: 700;
        display: flex;
        align-items: center;
    }

        h1 i {
            font-size: 1.5rem;
            color: var(--color-secundario); /* Icono en color de acento */
            margin-right: 15px;
        }

    h4 {
        color: #7f8c8d;
        font-size: 1.1rem;
    }

    /* Agrupamiento de campos (para distribución) */
    .form-section-title {
        color: var(--color-primario);
        font-weight: 700;
        margin-top: 20px;
        margin-bottom: 15px;
        font-size: 1.2rem;
        border-left: 3px solid var(--color-primario); /* Usamos primario para subtítulos internos */
        padding-left: 10px;
    }

    /* Estilo de los campos de formulario */
    .form-control, .form-select {
        border: 1px solid #bdc3c7;
        border-radius: 8px; /* Más redondeado */
        padding: 12px;
        transition: border-color 0.3s, box-shadow 0.3s;
        width: 100%;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--color-secundario);
            box-shadow: 0 0 0 0.25rem rgba(243, 156, 18, 0.25);
        }

    /* Estilo para las etiquetas (labels) */
    .control-label {
        font-weight: 600;
        color: var(--color-texto);
        margin-bottom: 8px;
        display: block; /* Asegura que la etiqueta esté en su propia línea */
        font-size: 0.95rem;
    }

    /* Contenedor para manejar las dos columnas */
    .data-grid {
        margin-bottom: 20px;
    }

    /* Botones de Acción */
    .form-actions {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #ecf0f1;
        display: flex;
        gap: 15px;
        justify-content: flex-end; /* Alinea los botones a la derecha en desktop */
    }

    .btn-action {
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        min-width: 150px; /* Más ancho para el botón principal */
    }

    /* Botón Guardar (Primario) */
    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
    }

        .btn-primary:hover {
            background-color: #4b6279;
            border-color: #4b6279;
            transform: translateY(-1px);
        }

    /* Botón Cancelar (Secundario) */
    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-texto);
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            border-color: #95a5a6;
            color: white;
            transform: translateY(-1px);
        }

    /* Mensajes de validación */
    .text-danger {
        font-size: 0.8rem;
        font-style: italic;
    }

    /* Estilo de la alerta de validación al inicio del formulario */
    .alert-danger {
        border-radius: 8px;
        border-left: 5px solid #dc3545;
        font-size: 0.95rem;
    }

    /* Enlace de volver a la lista */
    .back-link {
        font-weight: 600;
        color: var(--color-primario);
        text-decoration: none;
        display: block;
        margin-top: 20px;
        transition: color 0.2s;
    }

        .back-link:hover {
            color: var(--color-secundario);
            text-decoration: underline;
        }

    /* --------------------------------------------------
           ADAPTACIÓN RESPONSIVE
           -------------------------------------------------- */
    @@media (max-width: 767.98px) {
        .form-container {
            padding: 20px;
            margin-top: 0;
            border-radius: 0; /* Ocupa todo el ancho en móvil */
            box-shadow: none;
        }
        /* Asegura que los campos de dos columnas se apilen */
        .col-md-6 {
            width: 100%;
            margin-bottom: 20px; /* Agrega espacio entre campos apilados */
        }

        .header-section {
            margin-bottom: 20px;
            padding-bottom: 10px;
        }

        .form-actions {
            flex-direction: column; /* Apila los botones */
            gap: 10px;
            justify-content: center; /* Centra los botones apilados */
        }

        .btn-action {
            width: 100%; /* Botones de ancho completo */
        }

        .back-link {
            text-align: center;
            margin-top: 30px;
        }
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <!-- El formulario ocupa 100% en móvil, 90% en tabletas y 70% en desktop -->
        <div class="col-lg-8 col-md-10 col-12">
            <div class="form-container">

                <div class="header-section">
                    <h1><i class="fas fa-edit"></i> Editar Documento</h1>
                    <h4>Actualización de Datos de Registro</h4>
                </div>

                <form asp-action="Edit" method="post">
                    <!-- Validación principal del modelo -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Campo oculto para el ID del documento -->
                    <input type="hidden" asp-for="Id_documento" />

                    <!-- SECCIÓN 1: Identificación y Fechas (Dos columnas) -->
                    <h5 class="form-section-title">Información Principal</h5>
                    <div class="row data-grid">

                        <!-- Columna 1: Número de Documento -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                <label asp-for="Numero_documento" class="control-label">Número de Documento</label>
                                <input asp-for="Numero_documento" class="form-control" placeholder="Ej: R-0045-2024" />
                                <span asp-validation-for="Numero_documento" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Columna 2: Fecha de Emisión -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                <label asp-for="Fecha_emision" class="control-label">Fecha de Emisión</label>
                                <input asp-for="Fecha_emision" type="date" class="form-control" />
                                <span asp-validation-for="Fecha_emision" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- SECCIÓN 2: Propietario y Estado (Dos columnas) -->
                    <h5 class="form-section-title">Datos Administrativos</h5>
                    <div class="row data-grid">

                        <!-- Columna 1: Propietario -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                <label asp-for="Propietario" class="control-label">Propietario / Responsable</label>
                                <input asp-for="Propietario" class="form-control" placeholder="Nombre de la entidad o persona" />
                                <span asp-validation-for="Propietario" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Columna 2: Estado -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                <label asp-for="Estado" class="control-label">Estado del Documento</label>
                                <select asp-for="Estado" class="form-select">
                                    <option value="">-- Seleccionar Estado --</option>
                                    <option value="vigente">Vigente</option>
                                    <option value="anulado">Anulado</option>
                                    <option value="borrador">Borrador</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- SECCIÓN 3: Detalles (Full Width) -->
                    <h5 class="form-section-title">Detalles y Observaciones</h5>
                    <div class="form-group mb-4">
                        <label asp-for="Detalles" class="control-label">Detalles / Resumen</label>
                        <textarea asp-for="Detalles" class="form-control" rows="4" placeholder="Ingrese un resumen del contenido o cualquier observación relevante."></textarea>
                        <span asp-validation-for="Detalles" class="text-danger"></span>
                    </div>

                    <!-- SECCIÓN 4: Clasificación (Dos columnas) -->
                    <h5 class="form-section-title">Clasificación</h5>
                    <div class="row data-grid">

                        <!-- Columna 1: Tipo de Documento -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                <label asp-for="TipoDocumentoId" class="control-label">Tipo de Documento</label>
                                <select asp-for="TipoDocumentoId" class="form-select" asp-items="ViewBag.TipoDocumentoId">
                                    <option value="">-- Seleccionar Tipo --</option>
                                </select>
                                <span asp-validation-for="TipoDocumentoId" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Columna 2: Municipio -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                <label asp-for="MunicipioId" class="control-label">Municipio de Aplicación</label>
                                <select asp-for="MunicipioId" class="form-select" asp-items="ViewBag.MunicipioId">
                                    <option value="">-- Seleccionar Municipio --</option>
                                </select>
                                <span asp-validation-for="MunicipioId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- SECCIÓN 5: Botones de Acción -->
                    <div class="form-group form-actions">
                        <a asp-action="Index" class="btn btn-secondary btn-action"><i class="fas fa-times-circle me-2"></i> Cancelar</a>
                        <button type="submit" class="btn btn-primary btn-action"><i class="fas fa-save me-2"></i> Guardar Cambios</button>
                    </div>
                </form>
            </div>

            <!-- Enlace Volver a la Lista -->
            <a asp-action="Index" class="back-link">
                <i class="fas fa-arrow-left me-2"></i> Volver a la Lista
            </a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}