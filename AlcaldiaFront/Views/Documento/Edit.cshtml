@model AlcaldiaFront.DTOs.DocumentoDTOs.DocumentoActualizarDTO

@{
    ViewData["Title"] = "Editar Documento";
}

<style>
    /* Estilos globales (Antracita/Dorado) */
    :root {
        --color-primario: #34495e;
        --color-secundario: #f39c12;
        --color-texto: #2c3e50;
    }

    .form-container {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        border-left: 5px solid var(--color-secundario); /* Borde de acento lateral */
    }

    h1 {
        color: var(--color-primario);
        font-weight: 600;
        margin-bottom: 5px;
    }

    .control-label {
        font-weight: 600;
        color: var(--color-texto);
        margin-bottom: 5px;
    }

    .form-control:focus {
        border-color: var(--color-secundario);
        box-shadow: 0 0 0 0.25rem rgba(243, 156, 18, 0.25);
    }

    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
        min-width: 150px; /* Más ancho para "Guardar Cambios" */
    }

    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-texto);
        min-width: 120px;
    }

    .form-actions {
        margin-top: 30px;
        padding-top: 15px;
        border-top: 1px solid #ecf0f1;
    }
</style>

<div class="form-container">
    <h1><i class="fas fa-edit"></i> Editar Documento</h1>
    <h4>Actualización de Datos</h4>
    <hr />
    <div class="row">
        <div class="col-lg-10 col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="Id_documento" />

                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Numero_documento" class="control-label"></label>
                        <input asp-for="Numero_documento" class="form-control" />
                        <span asp-validation-for="Numero_documento" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Fecha_emision" class="control-label"></label>
                        <input asp-for="Fecha_emision" type="date" class="form-control" />
                        <span asp-validation-for="Fecha_emision" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Propietario" class="control-label"></label>
                        <input asp-for="Propietario" class="form-control" />
                        <span asp-validation-for="Propietario" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Estado" class="control-label"></label>
                        <select asp-for="Estado" class="form-control">
                            <option value="">-- Seleccionar Estado --</option>
                            <option value="vigente">vigente</option>
                            <option value="anulado">anulado</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Detalles" class="control-label"></label>
                    <textarea asp-for="Detalles" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Detalles" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="TipoDocumentoId" class="control-label">Tipo de Documento</label>
                        <select asp-for="TipoDocumentoId" class="form-control" asp-items="ViewBag.TipoDocumentoId">
                            <option value="">-- Seleccionar Tipo --</option>
                        </select>
                        <span asp-validation-for="TipoDocumentoId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 form-group">
                        <label asp-for="MunicipioId" class="control-label">Municipio</label>
                        <select asp-for="MunicipioId" class="form-control" asp-items="ViewBag.MunicipioId">
                            <option value="">-- Seleccionar Municipio --</option>
                        </select>
                        <span asp-validation-for="MunicipioId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group form-actions">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar Cambios</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index"><i class="fas fa-arrow-left"></i> Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}