@model AlcaldiaFront.DTOs.DocumentoDTOs.DocumentoRespuestaDTO

@{
    ViewData["Title"] = "Eliminar Documento";
    Dictionary<int, string> municipioNombres = ViewBag.MunicipioNombres as Dictionary<int, string>;
    Dictionary<int, string> tipoNombres = ViewBag.TipoNombres as Dictionary<int, string>;
    string GetBadgeClass(string estado) => estado?.ToLower() switch
    {
        "activo" => "success",
        "inactivo" => "danger",
        "pendiente" => "warning",
        _ => "secondary"
    };
}

<style>
    /* Estilos globales (Advertencia/Rojo) */
    :root {
        --color-primario: #34495e;
        --color-secundario: #f39c12;
        --color-peligro: #c0392b;
    }

    .delete-card {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        border-top: 5px solid var(--color-peligro);
    }

    h1 {
        color: var(--color-primario);
        font-weight: 600;
        margin-bottom: 5px;
    }

    h3 {
        color: var(--color-peligro);
        border-bottom: 2px solid #f2dede;
        padding-bottom: 10px;
        margin-bottom: 25px;
        font-weight: 400;
    }

    .dl-detalle dt {
        color: var(--color-secundario);
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
        padding-top: 10px;
    }

    .delete-actions {
        margin-top: 25px;
        padding-top: 15px;
        border-top: 1px solid #bdc3c7;
    }
    /* Botones de acción específicos */
    .btn-danger {
        background-color: var(--color-peligro);
        border-color: var(--color-peligro);
        min-width: 120px;
    }

    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-primario);
        min-width: 120px;
    }
</style>

<div class="delete-card">
    <h1><i class="fas fa-trash-alt"></i> Eliminar Documento</h1>
    <h3>🚨 ¿Estás seguro de que deseas eliminar este documento? Esta acción es irreversible.</h3>

    <div>
        <h4>Documento: <strong class="text-primary">@Model.Numero_documento</strong></h4>
        <hr />
        <dl class="row dl-detalle">

            <dt class="col-sm-4 col-md-3">
                <i class="fas fa-hashtag"></i> @Html.DisplayNameFor(model => model.Numero_documento)
            </dt>
            <dd class="col-sm-8 col-md-9">
                <h5>@Html.DisplayFor(model => model.Numero_documento)</h5>
            </dd>

            <dt class="col-sm-4 col-md-3">
                Fecha de emision
            </dt>
            <dd class="col-sm-8 col-md-9">
                @Html.DisplayFor(model => model.Fecha_emision)
            </dd>

            <dt class="col-sm-4 col-md-3">
                Ciudadano
            </dt>
            <dd class="col-sm-8 col-md-9">
                @Html.DisplayFor(model => model.Propietario)
            </dd>

            <dt class="col-sm-4 col-md-3">
                Detalles
            </dt>
            <dd class="col-sm-8 col-md-9">
                @Html.DisplayFor(model => model.Detalles)
            </dd>

            <dt class="col-sm-4 col-md-3">
                Estado actual
            </dt>
            <dd class="col-sm-8 col-md-9">
                @{
                    string badgeClass = GetBadgeClass(Model?.Estado);
                }
                <span class="badge bg-@badgeClass badge-lg">
                    @Html.DisplayFor(model => model.Estado)
                </span>
            </dd>

            <dt class="col-sm-4 col-md-3">
                Tipo de documento
            </dt>
            <dd class="col-sm-9">
                @{
                    string nombreTipo = "ID de TipoDoc no encontrado";
                    if (tipoNombres != null && tipoNombres.ContainsKey(Model.TipoDocumentoId))
                    {
                        nombreTipo = tipoNombres[Model.TipoDocumentoId];
                    }
                }
                <strong class="text-primary">@nombreTipo</strong>

                @* <small class="text-muted">(ID: @Model.MunicipioId)</small> *@
            </dd>

            <dt class="col-sm-4 col-md-3">
                Municipio
            </dt>
            <dd class="col-sm-9">
                @{
                    string nombreMunicipio = "ID de Municipio no encontrado";
                    if (municipioNombres != null && municipioNombres.ContainsKey(Model.MunicipioId))
                    {
                        nombreMunicipio = municipioNombres[Model.MunicipioId];
                    }
                }
                <strong class="text-primary">@nombreMunicipio</strong>

                @* <small class="text-muted">(ID: @Model.MunicipioId)</small> *@
            </dd>
        </dl>
    </div>

    <div class="delete-actions">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id_documento" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancelar</a>
        </form>
    </div>
</div>