@model AlcaldiaFront.DTOs.DocumentoDTOs.DocumentoRespuestaDTO

@{
    ViewData["Title"] = "Eliminar Documento";
    string GetBadgeClass(string estado) => estado?.ToLower() switch
    {
        "activo" => "success",
        "inactivo" => "danger",
        "pendiente" => "warning",
        _ => "secondary"
    };
}

<style>
    /* Estilos globales (Advertencia/Rojo) */
    :root {
        --color-primario: #34495e;
        --color-secundario: #f39c12;
        --color-peligro: #c0392b;
    }

    .delete-card {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        border-top: 5px solid var(--color-peligro);
    }

    h1 {
        color: var(--color-primario);
        font-weight: 600;
        margin-bottom: 5px;
    }

    h3 {
        color: var(--color-peligro);
        border-bottom: 2px solid #f2dede;
        padding-bottom: 10px;
        margin-bottom: 25px;
        font-weight: 400;
    }

    .dl-detalle dt {
        color: var(--color-secundario);
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
        padding-top: 10px;
    }

    .delete-actions {
        margin-top: 25px;
        padding-top: 15px;
        border-top: 1px solid #bdc3c7;
    }
    /* Botones de acción específicos */
    .btn-danger {
        background-color: var(--color-peligro);
        border-color: var(--color-peligro);
        min-width: 120px;
    }

    .btn-secondary {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
        color: var(--color-primario);
        min-width: 120px;
    }
</style>

<div class="delete-card">
    <h1><i class="fas fa-trash-alt"></i> Eliminar Documento</h1>
    <h3>🚨 ¿Estás seguro de que deseas eliminar este documento? Esta acción es irreversible.</h3>

    <div>
        <h4>Documento: <strong class="text-primary">@Model.Numero_documento</strong></h4>
        <hr />
        <dl class="row dl-detalle">
            <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Numero_documento)</dt>
            <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Numero_documento)</dd>

            <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Propietario)</dt>
            <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Propietario)</dd>

            <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Fecha_emision)</dt>
            <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Fecha_emision)</dd>

            <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Estado)</dt>
            <dd class="col-sm-8 col-md-9">
                @{
                    string badgeClass = GetBadgeClass(Model?.Estado);
                }
                <span class="badge bg-@badgeClass">
                    @Html.DisplayFor(model => model.Estado)
                </span>
            </dd>
        </dl>
    </div>

    <div class="delete-actions">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id_documento" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancelar</a>
        </form>
    </div>
</div>