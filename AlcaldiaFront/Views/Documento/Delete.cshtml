@model AlcaldiaFront.DTOs.DocumentoDTOs.DocumentoRespuestaDTO
@using System.Collections.Generic

@{
    ViewData["Title"] = "Confirmación de Eliminación";
    Dictionary<int, string> municipioNombres = ViewBag.MunicipioNombres as Dictionary<int, string>;
    Dictionary<int, string> tipoNombres = ViewBag.TipoNombres as Dictionary<int, string>;

    string GetBadgeClass(string estado) => estado?.ToLower() switch
    {
        "activo" => "success",
        "inactivo" => "danger",
        "pendiente" => "warning",
        _ => "secondary"
    };
}

<!-- Se requiere Bootstrap y Font Awesome para los iconos y el grid layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">

<style>
    /* --------------------------------------------------
           PATRÓN DE COLORES Y TIPOGRAFÍA
           -------------------------------------------------- */
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-peligro: #c0392b; /* Rojo de Advertencia */
        --color-bg-light: #f4f6f9;
        --color-texto-claro: #7f8c8d;
    }

    body {
        background-color: var(--color-bg-light);
        font-family: 'Inter', sans-serif;
    }

    /* Contenedor principal de eliminación (Tarjeta de advertencia) */
    .delete-card {
        background-color: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-top: 30px;
        margin-bottom: 30px;
        border-top: 6px solid var(--color-peligro); /* Borde de peligro fuerte */
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Encabezado y Advertencia */
    h1 {
        color: var(--color-primario);
        font-weight: 700;
        margin-bottom: 20px;
        font-size: 2rem;
    }

    .warning-message {
        background-color: #fcebeb; /* Fondo rosado claro */
        color: var(--color-peligro);
        border: 1px solid var(--color-peligro);
        padding: 15px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
    }

        .warning-message i {
            font-size: 1.5rem;
            margin-right: 15px;
        }

    /* Detalles del Documento a Eliminar */
    .detail-container {
        padding: 15px;
        border: 1px dashed var(--color-texto-claro);
        border-radius: 8px;
        margin-bottom: 25px;
    }

        .detail-container h4 {
            color: var(--color-primario);
            font-weight: 600;
            font-size: 1.25rem;
            padding-bottom: 10px;
            margin-bottom: 15px;
            border-bottom: 1px solid #eee;
        }

    .detail-label {
        color: var(--color-secundario); /* Etiquetas en color de acento */
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.8rem;
        margin-bottom: 2px;
        display: block;
    }

    .detail-value {
        font-size: 1rem;
        color: var(--color-texto);
        margin-bottom: 15px;
    }

    .description-value {
        white-space: pre-wrap;
        font-style: italic;
        border-left: 3px solid #ccc;
        padding-left: 10px;
    }

    .badge-lg {
        padding: 0.6em 0.8em;
        font-size: 0.85em;
    }

    /* Botones de Acción */
    .delete-actions {
        margin-top: 25px;
        padding-top: 25px;
        border-top: 1px solid #eee;
        display: flex;
        gap: 20px;
        justify-content: center; /* Centrar botones */
    }

    .btn-action {
        padding: 12px 30px;
        font-weight: 700;
        border-radius: 8px;
        min-width: 150px;
    }

    /* Botón Eliminar (Rojo - Destacado) */
    .btn-danger {
        background-color: var(--color-peligro);
        border-color: var(--color-peligro);
    }

    /* Botón Cancelar (Secundario - Menos prominente) */
    .btn-secondary {
        background-color: var(--color-texto-claro);
        border-color: var(--color-texto-claro);
        color: white;
    }

    /* --------------------------------------------------
           ADAPTACIÓN RESPONSIVE
           -------------------------------------------------- */
    @@media (max-width: 767.98px) {
        .delete-card {
            padding: 20px;
            margin-top: 0;
            border-radius: 0;
            box-shadow: none;
        }

        .delete-actions {
            flex-direction: column; /* Apilar botones en móvil */
            gap: 10px;
        }

        .btn-action {
            width: 100%; /* Botones de ancho completo */
        }

        .detail-value {
            margin-bottom: 10px;
        }
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-9 col-lg-10 col-12">

            <div class="delete-card">

                <h1><i class="fas fa-file-excel me-2"></i> Eliminar Documento</h1>

                <!-- MENSAJE DE ADVERTENCIA CRÍTICO -->
                <div class="warning-message">
                    <i class="fas fa-exclamation-triangle"></i>
                    Esta acción es permanente e irreversible. ¿Estás seguro de que deseas eliminar el documento "@Model.Numero_documento"?
                </div>

                <div class="delete-actions">
                    <form asp-action="Delete" class="d-flex justify-content-center w-100 flex-column flex-md-row gap-3">
                        <a asp-action="Index" class="btn btn-secondary btn-action order-2 order-md-1">
                            <i class="fas fa-times-circle me-2"></i> Cancelar
                        </a>
                        <input type="hidden" asp-for="Id_documento" />
                        <button type="submit" class="btn btn-danger btn-action order-1 order-md-2">
                            <i class="fas fa-trash-alt me-2"></i> Eliminar
                        </button>
                    </form>
                </div>
                <hr />

                <!-- SECCIÓN DE DETALLES DEL DOCUMENTO -->
                <div class="detail-container">
                    <h4>Información Clave del Documento</h4>

                    <div class="row">
                        <!-- NÚMERO DE DOCUMENTO (ID principal) -->
                        <div class="col-12 mb-3">
                            <span class="detail-label">Número de Documento</span>
                            <div class="detail-value">
                                <strong class="text-primary">@Html.DisplayFor(model => model.Numero_documento)</strong>
                            </div>
                        </div>

                        <!-- FILA 1: FECHA Y CIUDADANO -->
                        <div class="col-md-6 col-12">
                            <span class="detail-label">Fecha de Emisión</span>
                            <div class="detail-value">
                                <i class="far fa-calendar-alt me-1"></i> @Html.DisplayFor(model => model.Fecha_emision)
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <span class="detail-label">Ciudadano (Propietario)</span>
                            <div class="detail-value">
                                <i class="fas fa-user-circle me-1"></i> @Html.DisplayFor(model => model.Propietario)
                            </div>
                        </div>

                        <!-- FILA 2: ESTADO Y TIPO DE DOCUMENTO -->
                        <div class="col-md-6 col-12">
                            <span class="detail-label">Estado Actual</span>
                            <div class="detail-value">
                                @{
                                    string badgeClass = GetBadgeClass(Model?.Estado);
                                }
                                <span class="badge rounded-pill bg-@badgeClass badge-lg">
                                    @Html.DisplayFor(model => model.Estado)
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <span class="detail-label">Tipo de Documento</span>
                            <div class="detail-value">
                                @{
                                    string nombreTipo = tipoNombres != null && tipoNombres.ContainsKey(Model.TipoDocumentoId)
                                    ? tipoNombres[Model.TipoDocumentoId]
                                    : "Tipo no encontrado";
                                }
                                <i class="fas fa-tag me-1 text-secondary"></i> <strong>@nombreTipo</strong>
                            </div>
                        </div>

                        <!-- FILA 3: MUNICIPIO -->
                        <div class="col-12 mt-2">
                            <span class="detail-label">Municipio Objetivo</span>
                            <div class="detail-value">
                                @{
                                    string nombreMunicipio = municipioNombres != null && municipioNombres.ContainsKey(Model.MunicipioId)
                                    ? municipioNombres[Model.MunicipioId]
                                    : "Municipio no encontrado";
                                }
                                <i class="fas fa-map-marker-alt me-1 text-info"></i> <strong>@nombreMunicipio</strong>
                            </div>
                        </div>


                        <!-- DETALLES (DESCRIPCIÓN EXTENSA) -->
                        <div class="col-12 mt-3">
                            <span class="detail-label">Detalles / Observaciones</span>
                            <div class="detail-value description-value">
                                @Html.DisplayFor(model => model.Detalles)
                            </div>
                        </div>
                    </div>
                </div>

                <!-- BOTONES DE ACCIÓN (Formulario de Eliminación) -->
                
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @{
        // Opcional, pero se recomienda siempre para mantener la estructura de la vista Razor
    }
}