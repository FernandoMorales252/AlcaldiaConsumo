@model AlcaldiaFront.DTOs.DocumentoDTOs.DocumentoCrearDTO

@{
    ViewData["Title"] = "Crear Documento";
}

<!--
    ESTILOS CSS: Adoptando la gama formal (Antracita y Dorado/Naranja)
    y el diseño moderno de formularios.
-->
<style>
    :root {
        --color-primario: #34495e; /* Azul Marino/Antracita */
        --color-secundario: #f39c12; /* Dorado/Naranja - Acento */
        --color-fondo-claro: #ecf0f1;
        --color-texto: #2c3e50;
    }

    /* Contenedor principal del formulario (Tarjeta centralizada) */
    .form-container {
        background-color: white;
        padding: 30px;
        border-radius: 12px; /* Ligeramente más redondeado */
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15); /* Sombra más profunda */
        margin-top: 20px;
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        border-left: 6px solid var(--color-secundario);
        padding-left: 15px;
        margin-bottom: 25px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    h4 {
        color: #7f8c8d;
        font-weight: 400;
        margin-bottom: 20px;
    }

    /* Estilo de los campos de formulario */
    .form-control, .form-select {
        border: 1px solid #bdc3c7;
        border-radius: 6px;
        padding: 10px 12px;
        transition: border-color 0.3s, box-shadow 0.3s;
        width: 100%;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--color-secundario);
            box-shadow: 0 0 0 0.25rem rgba(243, 156, 18, 0.35); /* Sombra de acento */
            outline: none;
        }

    /* Estilo para las etiquetas (labels) */
    .control-label {
        font-weight: 600;
        color: var(--color-texto);
        margin-bottom: 8px;
        display: block;
    }

    /* Botones de Acción */
    .btn-primary {
        background-color: var(--color-primario);
        border-color: var(--color-primario);
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #4b6279;
            border-color: #4b6279;
        }

    .btn-secondary {
        background-color: #ecf0f1;
        border-color: #bdc3c7;
        color: var(--color-texto);
        font-weight: 600;
    }

        .btn-secondary:hover {
            background-color: #cfd6d8;
            border-color: #aeb5b7;
            color: var(--color-texto);
        }

    /* Contenedor de botones y acciones */
    .form-actions {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #dfe6e8;
    }

    /* Mensajes de validación */
    .text-danger {
        font-size: 0.8rem;
        font-style: italic;
        margin-top: 5px;
        display: block;
    }

    /* Estilo para los títulos de sección dentro del formulario */
    .form-section-title {
        color: var(--color-primario);
        font-weight: 600;
        margin-bottom: 15px;
        padding-bottom: 5px;
        border-bottom: 1px dashed #e0e0e0;
    }
</style>

<div class="form-container">
    <h1><i class="fas fa-file-upload"></i> Registrar Nuevo Documento</h1>
    <h4>Detalles y Asignación del Archivo</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                <!-- Bloque 1: Información Básica (2 Columnas) -->
                <h5 class="form-section-title">Información Principal</h5>
                <div class="row g-4 mb-5">

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Numero_documento" class="control-label">Número de Documento</label>
                            <input asp-for="Numero_documento" class="form-control" placeholder="Ej: DOC-2024-001" />
                            <span asp-validation-for="Numero_documento" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Fecha_emision" class="control-label">Fecha de Emisión</label>
                            <input asp-for="Fecha_emision" type="date" class="form-control" />
                            <span asp-validation-for="Fecha_emision" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Bloque 2: Propietario y Estado (2 Columnas) -->
                <h5 class="form-section-title">Datos Administrativos</h5>
                <div class="row g-4 mb-5">

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Propietario" class="control-label">Propietario/Entidad</label>
                            <input asp-for="Propietario" class="form-control" placeholder="Nombre o Entidad Propietaria" />
                            <span asp-validation-for="Propietario" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Estado" class="control-label">Estado</label>
                            <select asp-for="Estado" class="form-control form-select">
                                <option value="">-- Seleccionar Estado --</option>
                                <option value="vigente">Vigente</option>
                                <option value="anulado">Anulado</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Bloque 3: Detalles (Fila Completa) -->
                <h5 class="form-section-title">Detalles y Descripción</h5>
                <div class="row g-4 mb-5">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="Detalles" class="control-label">Detalles</label>
                            <textarea asp-for="Detalles" class="form-control" rows="4" placeholder="Detalles o resumen del contenido del documento"></textarea>
                            <span asp-validation-for="Detalles" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Bloque 4: Asignación (2 Columnas) -->
                <h5 class="form-section-title">Asignación de Clasificación</h5>
                <div class="row g-4 mb-5">

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="TipoDocumentoId" class="control-label">Tipo de Documento</label>
                            <select asp-for="TipoDocumentoId" class="form-control form-select" asp-items="ViewBag.TipoDocumentoId">
                                <option value="">-- Seleccionar Tipo --</option>
                            </select>
                            <span asp-validation-for="TipoDocumentoId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="MunicipioId" class="control-label">Municipio</label>
                            <select asp-for="MunicipioId" class="form-control form-select" asp-items="ViewBag.MunicipioId">
                                <option value="">-- Seleccionar Municipio --</option>
                            </select>
                            <span asp-validation-for="MunicipioId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Bloque de Acciones: Alineados a la derecha -->
                <div class="form-group form-actions d-flex justify-content-end gap-3">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancelar</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Crear Documento</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="text-decoration-none text-muted"><i class="fas fa-arrow-left"></i> Volver a la Lista de Documentos</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}