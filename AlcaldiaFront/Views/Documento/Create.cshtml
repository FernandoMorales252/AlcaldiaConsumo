@model AlcaldiaFront.DTOs.DocumentoDTOs.DocumentoCrearDTO

@{
    ViewData["Title"] = "Crear Documento";
}

<h1>Crear Documento</h1>

<h4>Documento</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Numero_documento" class="control-label"></label>
                <input asp-for="Numero_documento" class="form-control" />
                <span asp-validation-for="Numero_documento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fecha_emision" class="control-label"></label>
                <input asp-for="Fecha_emision" type="date" class="form-control" />
                <span asp-validation-for="Fecha_emision" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Propietario" class="control-label"></label>
                <input asp-for="Propietario" class="form-control" />
                <span asp-validation-for="Propietario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Detalles" class="control-label"></label>
                <textarea asp-for="Detalles" class="form-control"></textarea>
                <span asp-validation-for="Detalles" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoDocumentoId" class="control-label">Tipo de Documento</label>
                <select asp-for="TipoDocumentoId" class="form-control" asp-items="ViewBag.TipoDocumentoId">
                    <option value="">-- Seleccionar Tipo --</option>
                </select>
                <span asp-validation-for="TipoDocumentoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MunicipioId" class="control-label">Municipio</label>
                <select asp-for="MunicipioId" class="form-control" asp-items="ViewBag.MunicipioId">
                    <option value="">-- Seleccionar Municipio --</option>
                </select>
                <span asp-validation-for="MunicipioId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
